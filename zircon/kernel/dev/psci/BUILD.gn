import("//build/cpp/library_headers.gni")

library_headers("headers") {
  headers = [ "dev/psci.h" ]
  public_deps = [ "//sdk/lib/zbi-format" ]
}

source_set("psci") {
  sources = [ "psci.cc" ]
  public_deps = [ ":headers" ]
  deps = [
    "//zircon/kernel/dev/pdev/power",
    "//zircon/kernel/lib/console",
  ]
}
