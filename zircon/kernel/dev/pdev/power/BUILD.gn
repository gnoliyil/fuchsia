import("//build/cpp/library_headers.gni")

library_headers("headers") {
  headers = [ "pdev/power.h" ]
}

source_set("power") {
  sources = [ "power.cc" ]
  public_deps = [ ":headers" ]
  deps = [ "//zircon/kernel/lib/arch" ]
  if (current_cpu == "arm64") {
    deps += [ "//zircon/kernel/dev/psci" ]
  }
}
