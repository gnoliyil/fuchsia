import("//build/fuzz.gni")

group("tests") {
  testonly = true
  deps = [ ":elfload-fuzzers" ]
}

fuchsia_library_fuzzer("elfload-fuzzer") {
  sources = [ "elfload-fuzzer.cc" ]
  deps = [
    "//zircon/system/ulib/elfload",
    "//zircon/system/ulib/zx",
  ]
}

fuchsia_fuzzer_component("elfload-fuzzer-component") {
  manifest = "meta/elfload-fuzzer.cml"
  deps = [ ":elfload-fuzzer" ]
}

fuchsia_fuzzer_package("elfload-fuzzers") {
  cpp_fuzzer_components = [ ":elfload-fuzzer-component" ]
}
