    "hid/descriptor.h",
    "hid/egalax.h",
    "hid/eyoyo.h",
    "hid/ft3x27.h",
    "hid/ft5726.h",
    "hid/ft5336_khadas_ts050.h",
    "hid/ft6336.h",
    "hid/gt92xx.h",
    "hid/hid.h",
    "hid/ltr-578als.h",
    "hid/multi-sensor.h",
    "hid/paradise.h",
    "hid/samsung.h",
    "hid/usages.h",
    "hid/mouse.h",
    "hid/virtio-mouse.h",
