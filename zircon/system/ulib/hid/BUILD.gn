    "acer12.c",
    "ambient-light.c",
    "atlas-touchpad.c",
    "bma253.c",
    "boot.c",
    "buttons.c",
    "egalax.c",
    "eyoyo.c",
    "ft3x27.c",
    "ft5336_khadas_ts050.c",
    "ft5726.c",
    "ft6336.c",
    "gt92xx.c",
    "hid.c",
    "keymaps.c",
