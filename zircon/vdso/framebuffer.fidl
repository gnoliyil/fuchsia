library zx;

@transport("Syscall")
closed protocol Framebuffer {
    /// ## Summary
    ///
    /// TODO(fxbug.dev/32938)
    ///
    /// ## Declaration
    ///
    /// ```c
    /// #include <zircon/syscalls.h>
    ///
    /// zx_status_t zx_framebuffer_get_info(zx_handle_t resource,
    ///                                     uint32_t* format,
    ///                                     uint32_t* width,
    ///                                     uint32_t* height,
    ///                                     uint32_t* stride);
    /// ```
    ///
    /// ## Description
    ///
    /// TODO(fxbug.dev/32938)
    ///
    /// ## Rights
    ///
    /// *resource* must have resource kind **ZX_RSRC_KIND_ROOT**.
    ///
    /// ## Return value
    ///
    /// TODO(fxbug.dev/32938)
    ///
    /// ## Errors
    ///
    /// TODO(fxbug.dev/32938)
    ///
    /// ## See also
    ///
    /// TODO(fxbug.dev/32938)
    strict GetInfo(resource struct {
        resource Handle:RESOURCE;
    }) -> (struct {
        format uint32;
        width uint32;
        height uint32;
        stride uint32;
    }) error Status;

    // TODO(fxbug.dev/32803): vmo ZX_OBJ_TYPE_VMO; No rights required?
    /// ## Summary
    ///
    /// TODO(fxbug.dev/32938)
    ///
    /// ## Declaration
    ///
    /// ```c
    /// #include <zircon/syscalls.h>
    ///
    /// zx_status_t zx_framebuffer_set_range(zx_handle_t resource,
    ///                                      zx_handle_t vmo,
    ///                                      uint32_t len,
    ///                                      uint32_t format,
    ///                                      uint32_t width,
    ///                                      uint32_t height,
    ///                                      uint32_t stride);
    /// ```
    ///
    /// ## Description
    ///
    /// TODO(fxbug.dev/32938)
    ///
    /// ## Rights
    ///
    /// *resource* must have resource kind **ZX_RSRC_KIND_ROOT**.
    ///
    /// ## Return value
    ///
    /// TODO(fxbug.dev/32938)
    ///
    /// ## Errors
    ///
    /// TODO(fxbug.dev/32938)
    ///
    /// ## See also
    ///
    /// TODO(fxbug.dev/32938)
    strict SetRange(resource struct {
        resource Handle:RESOURCE;
        vmo Handle:VMO;
        len uint32;
        format uint32;
        width uint32;
        height uint32;
        stride uint32;
    }) -> () error Status;
};
