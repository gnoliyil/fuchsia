{
    include: [
        "inspect/client.shard.cml",
        "syslog/client.shard.cml",
    ],
    program: {
        runner: "elf",
        binary: "bin/bt_snoop",
    },
    capabilities: [
        {
            protocol: [ "fuchsia.bluetooth.snoop.Snoop" ],
        },
    ],
    use: [
        {
            directory: "dev-bt-hci",
            rights: [ "r*" ],
            path: "/dev/class/bt-hci",
        },
        {
            protocol: [ "fuchsia.tracing.provider.Registry" ],
        },
    ],
    expose: [
        {
            protocol: [ "fuchsia.bluetooth.snoop.Snoop" ],
            from: "self",
        },
    ],
}
