import("//build/components.gni")

executable("bin") {
  output_name = "bt-hci-tool"

  sources = [
    "commands.cc",
    "commands.h",
    "main.cc",
  ]

  deps = [
    "../lib",
    "//sdk/fidl/fuchsia.hardware.bluetooth:fuchsia.hardware.bluetooth_hlcpp",
    "//sdk/lib/fdio",
    "//src/connectivity/bluetooth/core/bt-host/common",
    "//src/connectivity/bluetooth/core/bt-host/controllers:fidl_controller",
    "//src/connectivity/bluetooth/core/bt-host/gap",
    "//src/connectivity/bluetooth/core/bt-host/hci",
    "//src/connectivity/bluetooth/core/bt-host/hci-spec",
    "//src/connectivity/bluetooth/core/bt-host/transport",
    "//src/lib/fxl",
    "//zircon/system/ulib/fbl",
  ]
}

fuchsia_shell_package("bt-hci-tool") {
  deps = [ ":bin" ]
}
