{
    include: [
        "//src/media/codec/factory/meta/include_codecfactory.shard.cml",
        "//src/sys/test_runners/rust/default.shard.cml",
        "sys/component/realm_builder.shard.cml",
        "syslog/client.shard.cml",
    ],
    program: {
        binary: "bin/bt_a2dp_source_integration_tests",
        args: [ "--test-threads=1" ],
    },
    children: [
        {
            name: "mock-cobalt",
            url: "fuchsia-pkg://fuchsia.com/bt-a2dp-source-integration-tests#meta/mock_cobalt.cm",
        },
    ],
    offer: [
        {
            protocol: "fuchsia.logger.LogSink",
            from: "parent",
            to: [ "#mock-cobalt" ],
        },
        {
            protocol: [
                "fuchsia.sysmem.Allocator",
                "fuchsia.tracing.provider.Registry",
            ],
            from: "parent",
            to: [ "#realm_builder" ],
        },
        {
            protocol: [ "fuchsia.mediacodec.CodecFactory" ],
            from: "#codec-factory",
            to: [ "#realm_builder" ],
        },
        {
            protocol: [ "fuchsia.metrics.MetricEventLoggerFactory" ],
            from: "#mock-cobalt",
            to: [ "#realm_builder" ],
        },
    ],
    facets: {
        "fuchsia.test": {
            "deprecated-allowed-packages": [
                "bt-avrcp-target",
                "codec_factory",
            ],
        },
    },
}
