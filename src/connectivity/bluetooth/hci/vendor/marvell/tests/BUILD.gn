import("//build/components.gni")

group("tests") {
  testonly = true
  deps = [ ":bt-hci-marvell-tests" ]
}

_tests = [
  "driver-channel",
  "host-channel",
  "host-channel-manager",
  "lifecycle",
  "device-oracle",
]

foreach(test_name, _tests) {
  fuchsia_unittest_component("${test_name}_component") {
    deps = [ ":${test_name}-tests" ]
  }
}

fuchsia_test_package("bt-hci-marvell-tests") {
  test_components = []
  foreach(test_name, _tests) {
    test_components += [ ":${test_name}_component" ]
  }
  test_specs = {
    log_settings = {
      max_severity = "ERROR"
    }
  }
}

executable("driver-channel-tests") {
  testonly = true
  output_name = "bt-hci-marvell-driver-channel-tests"
  sources = [
    "bt_hci_mock_sdio.h",
    "bt_hci_mock_sdio_test.h",
    "driver_channel_unittest.cc",
  ]
  deps = [
    "//sdk/banjo/fuchsia.hardware.sdio:fuchsia.hardware.sdio_banjo_cpp_mock",
    "//src/connectivity/bluetooth/hci/vendor/marvell:common",
    "//src/devices/testing/mock-ddk",
    "//zircon/system/ulib/zxtest",
  ]
}

executable("host-channel-manager-tests") {
  testonly = true
  output_name = "bt-hci-marvell-host-channel-manager-tests"
  sources = [ "host_channel_manager_unittest.cc" ]
  deps = [
    "//src/connectivity/bluetooth/hci/vendor/marvell:common",
