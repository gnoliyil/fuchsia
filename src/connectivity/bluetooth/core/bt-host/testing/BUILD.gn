import("//src/connectivity/bluetooth/core/bt-host/build/bt_gtest_package.gni")

source_set("testing") {
  testonly = true

  sources = [
    "controller_test.h",
    "inspect.h",
    "inspect_util.cc",
    "inspect_util.h",
    "test_packets.cc",
    "test_packets.h",
  ]

  deps = [ "//third_party/googletest:gtest" ]

  public_deps = [
    ":fake_controller",
    ":mock_controller",
    ":test_helpers",
    "//sdk/lib/inspect/testing/cpp",
    "//src/connectivity/bluetooth/core/bt-host/transport",
    "//src/connectivity/bluetooth/core/bt-host/transport:testing",
    "//src/lib/testing/loop_fixture",
  ]
}

# test_helpers is separate from :testing to fix dependency cycles.
source_set("test_helpers") {
  testonly = true

  sources = [
    "test_helpers.cc",
    "test_helpers.h",
  ]

  deps = [
    "//src/connectivity/bluetooth/core/bt-host/common",
    "//src/connectivity/bluetooth/lib/cpp-string",
    "//third_party/googletest:gtest",
  ]

  public_deps = [ "//third_party/googletest:gmock" ]
}

source_set("tests") {
  testonly = true

  sources = [
    "fake_controller_unittest.cc",
    "fake_dynamic_channel_unittest.cc",
    "fake_l2cap_unittest.cc",
    "fake_sdp_server_unittest.cc",
    "fake_signaling_server_unittest.cc",
    "inspect_util_unittest.cc",
  ]

  deps = [
    ":testing",
    "//src/connectivity/bluetooth/core/bt-host/l2cap:testing",
  ]
}

bt_gtest_package("bt-host-testing-tests") {
  deps = [ ":tests" ]
}

