import("//build/components.gni")
import("//build/rust/rustc_staticlib.gni")

rustc_staticlib("wlan-fullmac-mlme-c") {
  name = "wlan_fullmac_mlme_c"
  version = "0.1.0"
  with_unit_tests = true
  edition = "2021"

  deps = [
    "//src/connectivity/wlan/lib/mlme/fullmac:wlan-fullmac-mlme",
