{
    actions: [
        {
            type: "expect_pass",
            matchers: [
                "*",
            ],
        },
        {
            type: "expect_failure",
            matchers: [
                // TODO(https://fxbug.dev/105630, https://fxbug.dev/106959): Should pass
                // against Netstack3 once adding deprecated addresses and updating
                // address lifetimes are supported.
                "address_deprecation_ns3",

                // TODO(https://fxbug.dev/76987): Should pass against Netstack3 once
                // multicast forwarding is supported.
                "get_set_forwarding_ns3*multicast*",
                "get_set_forwarding_loopback_ns3::set_ip_false_and_multicast_ip_true",
                "get_set_forwarding_loopback_ns3::set_multicast*",

                // TODO(https://fxbug.dev/106959): Should pass against Netstack3 once
                // updating adddress lifetimes is supported.
                "update_address_lifetimes_ns3",

                // TODO(https://fxbug.dev/125716): Should pass against Netstack2 once
                // it supports AddressProperties.add_subnet_route`.
                "add_address_*ns2::add_subnet_route_is_true*",
            ],
        },
    ],
}
