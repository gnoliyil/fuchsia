import("//build/components.gni")
import("//build/test.gni")

test("test") {
  output_name = "getifaddrs-test"
  if (is_linux || is_fuchsia) {
    sources = [
      "../os.h",
      "getifaddrs_test.cc",
    ]
  }
  deps = [
    "//src/lib/fxl/test:gtest_main",
    "//third_party/googletest:gmock",
  ]
}

fuchsia_test_component("test-driver") {
  manifest = "meta/test-driver.cml"
  deps = [ ":test" ]
}

fuchsia_test_component("getifaddrs-test") {
  manifest = "meta/getifaddrs-test.cml"
  deps = [
    ":test-driver",
    "//src/connectivity/network/testing/netemul/configurable-netstack",
  ]
}

fuchsia_test_component("getifaddrs-test-ns3") {
  manifest = "meta/getifaddrs-test.cml"
  deps = [
    ":test-driver",
    "//src/connectivity/network/testing/netemul/configurable-netstack:configurable-netstack-netstack3",
  ]
}

fuchsia_test_package("getifaddrs-tests") {
  test_components = [
    ":getifaddrs-test",
    ":getifaddrs-test-ns3",
  ]
}

group("tests") {
  testonly = true

  deps = [
    ":getifaddrs-test($host_toolchain)",
    ":getifaddrs-tests",
  ]
}
