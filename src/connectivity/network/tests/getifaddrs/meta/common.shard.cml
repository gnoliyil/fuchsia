{
    include: [
        "//src/connectivity/network/testing/netemul/runner/default.shard.cml",
        "syslog/client.shard.cml",
    ],
    program: {
        networks: [
            {
                name: "net",
                endpoints: [
                    { name: "ep1" },
                    { name: "ep2" },
                    { name: "ep3" },
                    { name: "ep4" },
                ],
            },
        ],
        netstacks: [
            {
                name: "netstack",
                interfaces: [
                    {
                        name: "ep1",
                        static_ips: [ "192.168.0.1/20" ],
                    },
                    {
                        name: "ep2",
                        static_ips: [ "192.168.0.2/15" ],
                    },
                    {
                        name: "ep3",
                        static_ips: [ "fe80::1/64" ],
                    },
                    {
                        name: "ep4",
                        static_ips: [ "1234::5:6:7:8/120" ],
                    },
                ],
            },
        ],
    },
    children: [
        {
            name: "test-driver",
            url: "#meta/test-driver.cm",
        },
    ],
    use: [
        {
            protocol: "fuchsia.test.Suite",
            from: "#test-driver",
        },
        {
            protocol: "fuchsia.netemul.ConfigurableNetstack",
            from: "#netstack",
            path: "/svc/netstack",
        },
    ],
    offer: [
        {
            protocol: "fuchsia.logger.LogSink",
            from: "parent",
            to: [
                "#netstack",
                "#test-driver",
            ],
        },
        {
            protocol: [ "fuchsia.posix.socket.Provider" ],
            from: "#netstack",
            to: "#test-driver",
        },
    ],
}
