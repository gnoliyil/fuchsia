{
    include: [ "syslog/client.shard.cml" ],
    program: {
        runner: "elf",
        binary: "bin/network_context",
    },
    capabilities: [
        { protocol: "fuchsia.netemul.network.NetworkContext" },
    ],
    use: [
        {
            directory: "dev-topological",
            rights: [ "r*" ],
            path: "/dev",
        },
        {
            protocol: [
                "fuchsia.driver.test.Realm",
                "fuchsia.net.tun.Control",
            ],
            from: "parent",
        },
    ],
    expose: [
        {
            protocol: "fuchsia.netemul.network.NetworkContext",
            from: "self",
        },
    ],
}
