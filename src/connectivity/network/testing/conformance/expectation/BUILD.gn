import("//build/go/go_library.gni")
import("//build/go/go_test.gni")

if (is_host) {
  suite_expectations = [
    "arp.go",
    "dhcp_client.go",
    "dhcp_server.go",
    "dhcpv6_client.go",
    "icmp.go",
    "icmpv6.go",
    "icmpv6_router.go",
    "igmp.go",
    "igmpv3.go",
    "ip.go",
    "ipv6.go",
    "ipv6_mld.go",
    "ipv6_mldv2.go",
    "ipv6_pmtu.go",
    "ipv6_router.go",
    "ipv6ndp.go",
    "tcp_advanced.go",
    "tcp_advanced_v6.go",
    "tcp_highperf.go",
    "tcp_highperf_v6.go",
    "tcpcore.go",
    "tcpcorev6.go",
    "udp.go",
    "udp_v6.go",
  ]

  go_library("expectation") {
    sources = [
                "expectation.go",
                "expectation_test.go",
              ] + suite_expectations
    deps = [
      "//src/connectivity/network/testing/conformance/expectation/outcome",
      "//src/connectivity/network/testing/conformance/expectation/platform",
      "//src/connectivity/network/testing/conformance/parseoutput",
    ]
  }

  go_test("expectation_test") {
    library = ":expectation"
  }
}

group("tests") {
  if (host_os == "linux") {
    deps = [ ":expectation_test($host_toolchain)" ]
  }
  testonly = true
}
