// TODO(https://fxbug.dev/89642): Shard the network realm manifest instead of
// duplicating much of it below.
{
    include: [ "syslog/client.shard.cml" ],
    children: [
        {
            name: "dhcpd",
            url: "#meta/dhcpv4_server.cm",
        },
        {
            name: "dhcpv6-client",
            url: "#meta/dhcpv6-client.cm",
        },
        {
            name: "dns-resolver",
            url: "#meta/dns_resolver.cm",
        },
    ],
    collections: [
        {
            name: "stubs",
            durability: "single_run",
        },
    ],
    offer: [
        {
            protocol: [ "fuchsia.device.NameProvider" ],
            from: "parent",
            to: [ "#netstack" ],
        },
        {
            protocol: [ "fuchsia.logger.LogSink" ],
            from: "parent",
            to: [
                "#dhcpd",
                "#dhcpv6-client",
                "#dns-resolver",
                "#netstack",
                "#stubs",
            ],
        },
        {
            protocol: [ "fuchsia.net.name.Lookup" ],
            from: "#dns-resolver",
            to: [ "#dhcpd" ],
        },
        {
            protocol: [ "fuchsia.net.routes.State" ],
            from: "#netstack",
            to: [ "#dns-resolver" ],
        },
        {
            protocol: [ "fuchsia.posix.socket.Provider" ],
            from: "#netstack",
            to: [
                "#dhcpd",
                "#dhcpv6-client",
                "#dns-resolver",
                "#stubs",
            ],
        },
        {
            protocol: [ "fuchsia.posix.socket.packet.Provider" ],
            from: "#netstack",
            to: [ "#dhcpd" ],
        },
    ],
    expose: [
        {
            protocol: [
                "fuchsia.net.debug.Interfaces",
                "fuchsia.net.interfaces.admin.Installer",
                "fuchsia.net.interfaces.State",
                "fuchsia.net.root.Interfaces",
                "fuchsia.net.stack.Stack",
                "fuchsia.posix.socket.Provider",
            ],
            from: "#netstack",
        },
        {
            protocol: [ "fuchsia.net.dhcpv6.ClientProvider" ],
            from: "#dhcpv6-client",
        },
        {
            // Enables the Network Test Realm controller to add and remove
            // components in the "stubs" collection.
            protocol: [ "fuchsia.component.Realm" ],
            from: "framework",
        },
    ],
}
