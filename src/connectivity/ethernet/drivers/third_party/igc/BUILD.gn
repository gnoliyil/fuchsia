import("//build/bind/bind.gni")
import("//build/drivers.gni")

driver_bind_rules("igc_bind") {
  rules = "igc.bind"
  tests = "bind-tests.json"
  deps = [
    "//src/devices/bind/fuchsia.driver.framework",
    "//src/devices/bind/fuchsia.pci",
  ]
}

source_set("igc_core") {
  configs += [ "//build/config:all_source" ]

  sources = [
    "igc_api.cc",
    "igc_base.cc",
    "igc_driver.cc",
    "igc_i225.cc",
    "igc_mac.cc",
    "igc_nvm.cc",
    "igc_phy.cc",
  ]

  public = [ "igc_osdep.h" ]

  public_deps = [
    ":igc_bind",
    "//sdk/fidl/fuchsia.hardware.network:fuchsia.hardware.network_cpp_wire",
    "//sdk/fidl/fuchsia.hardware.network.driver:fuchsia.hardware.network.driver_banjo_cpp",
    "//src/lib/vmo_store",
  ]

  deps = [
    "//src/connectivity/network/drivers/network-device/device:shared_lock",
    "//src/connectivity/wlan/drivers/lib/components:cpp",
    "//src/devices/lib/driver",
    "//src/devices/lib/mmio",
    "//src/devices/pci/lib/device-protocol-pci",
    "//src/devices/pci/lib/pci",
    "//src/lib/ddktl",
    "//src/lib/listnode",
  ]
}

fuchsia_driver("igc-driver") {
  output_name = "igc"
  deps = [ ":igc_core" ]
}

fuchsia_driver_component("igc") {
  component_name = "igc"
  deps = [ ":igc-driver" ]
  info = "igc-info.json"
  manifest = "meta/igc.cml"
}

group("tests") {
  testonly = true
  deps = [ ":igc_bind_test" ]
}
