import("//build/components.gni")
import("//build/rust/rustc_library.gni")

visibility = [ "//src/sys/bedrock/*" ]

group("tests") {
  testonly = true
  deps = [ ":cap-unittests" ]
}

rustc_library("cap") {
  edition = "2021"
  with_unit_tests = true

  deps = [
    "//src/lib/fidl/rust/fidl",
    "//src/lib/fuchsia-async",
    "//src/lib/zircon/rust:fuchsia-zircon",
    "//src/sys/bedrock/fidl:fuchsia.component.bedrock_rust",
    "//third_party/rust_crates:anyhow",
    "//third_party/rust_crates:downcast-rs",
    "//third_party/rust_crates:futures",
  ]

  test_deps = [
    "//src/lib/fuchsia",
    "//third_party/rust_crates:assert_matches",
  ]

  sources = [
    "src/cap.rs",
    "src/dict.rs",
    "src/handle.rs",
    "src/lib.rs",
    "src/null.rs",
    "src/oneshot.rs",
  ]
}

# Run with `fx test cap-unittests`.
fuchsia_unittest_package("cap-unittests") {
  deps = [ ":cap_test" ]
}
