{
    include: [ "syslog/client.shard.cml" ],
    program: {
        runner: "elf",
        binary: "bin/fake_appmgr",
    },
    capabilities: [
        {
            directory: "svc_from_sys",
            rights: [ "r*" ],
            path: "/svc",
        },
    ],
    use: [
        {
            directory: "svc_for_sys",
            rights: [ "r*" ],
            path: "/svc_for_sys",
        },
    ],
    expose: [
        {
            directory: "svc_from_sys",
            from: "self",
        },
    ],
}
