rustc_binary("unresponsive_component") {
  source_root = "unresponsive_component.rs"
  name = "unresponsive_component"
  edition = "2021"

  deps = [
    "//sdk/fidl/fuchsia.process.lifecycle:fuchsia.process.lifecycle_rust",
