import("//build/components.gni")
import("//src/sys/core/build/core_shard.gni")

fuchsia_component("test_realm") {
  testonly = true
  component_name = "test_realm"
  manifest = "meta/test_realm.cml"
}

fuchsia_package("testing_pkg") {
  testonly = true
  package_name = "testing"
  deps = [
    ":test_realm",
    "//src/lib/fuchsia-component-test/realm_builder_server:realm_builder_server_component",
  ]
}

core_shard("test_realm_core_shard") {
  shard_file = "meta/test_realm.core_shard.cml"
}

group("testing") {
  testonly = true
  deps = [
    ":testing_pkg",
    "//src/sys/test_manager",
  ]
}
