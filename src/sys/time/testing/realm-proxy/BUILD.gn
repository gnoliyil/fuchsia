import("//build/components.gni")
import("//build/rust/rustc_binary.gni")

group("realm-proxy") {
  testonly = true
  deps = [
    ":bin",
    ":default",
    ":pkg",
    ":tests",
  ]
}

group("tests") {
  testonly = true
  deps = []
}

rustc_binary("bin") {
  testonly = true
  edition = "2021"
  name = "timekeeper-test-realm-factory"
  sources = [
    "src/main.rs",
    "src/realm_factory.rs",
  ]
  deps = [
    "//sdk/fidl/fuchsia.metrics.test:fuchsia.metrics.test_rust",
    "//src/lib/fake-clock/fidl:fidl_rust",
    "//src/lib/fidl/rust/fidl",
    "//src/lib/fuchsia",
    "//src/lib/fuchsia-async",
    "//src/lib/fuchsia-component",
    "//src/lib/fuchsia-component-test",
    "//src/lib/zircon/rust:fuchsia-zircon",
    "//src/lib/zircon/rust:fuchsia-zircon-status",
    "//src/sys/time/testing/fidl:test.time.realm_rust",
    "//src/sys/time/timekeeper_integration:timekeeper_integration_lib",
    "//src/testing/realm_proxy",
    "//third_party/rust_crates:anyhow",
    "//third_party/rust_crates:futures",
    "//third_party/rust_crates:tracing",
  ]
}

fuchsia_component("default") {
  testonly = true
  manifest = "meta/default.cml"
  deps = [ ":bin" ]
}

fuchsia_package("pkg") {
  package_name = "timekeeper-test-realm-factory"
  testonly = true
  deps = [
    ":default",
    "//src/cobalt/bin/testing/mock_cobalt:component_v2",
    "//src/lib/fake-clock/svc",
    "//src/sys/time/timekeeper_integration:config-values-faketime",
    "//src/sys/time/timekeeper_integration:config-values-integration",
    "//src/sys/time/timekeeper_integration:timekeeper_for_integration",
    "//src/sys/time/timekeeper_integration:timekeeper_with_fake_time",
    "//src/sys/time/timekeeper_integration/dev_time_source:dev_time_source",
  ]
}
