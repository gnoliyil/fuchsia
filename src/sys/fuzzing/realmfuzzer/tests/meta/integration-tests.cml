// This manifest corresponds to the root of the realm used for the integration
// tests.
{
    include: [
        "//sdk/lib/inspect/client.shard.cml",
        "//src/sys/test_runners/gtest/default.shard.cml",
        "syslog/client.shard.cml",
    ],
    program: {
        binary: "test/realmfuzzer_integration_tests",
    },
    children: [
        {
            name: "coverage",
            url: "#meta/coverage.cm",
        },
        {
            name: "engine",
            url: "#meta/engine.cm",
        },
        {
            name: "fuzzer",
            url: "#meta/fuzzer.cm",
        },
    ],
    use: [
        {
            protocol: "fuchsia.fuzzer.TargetAdapter",
            from: "#fuzzer",
        },
        {
            protocol: "fuchsia.fuzzer.CoverageDataProvider",
            from: "#coverage",
        },
        {
            protocol: [ "fuchsia.process.Launcher" ],
            from: "parent",
        },
    ],
    offer: [
        {
            protocol: "fuchsia.fuzzer.CoverageDataCollector",
            from: "#coverage",
            to: "#fuzzer",
        },
        {
            protocol: [
                "fuchsia.logger.LogSink",
                "fuchsia.process.Launcher",
            ],
            from: "parent",
            to: [
                "#coverage",
                "#fuzzer",
            ],
        },
    ],
}
