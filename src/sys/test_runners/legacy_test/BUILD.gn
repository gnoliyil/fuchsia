import("//build/components.gni")

executable("bin") {
  testonly = true
  output_name = "legacy_test_runner"
  sources = [
    "main.cc",
    "runner.cc",
    "runner.h",
    "suite.cc",
    "suite.h",
    "test_component.cc",
    "test_component.h",
  ]

  deps = [
    "//sdk/fidl/fuchsia.component.runner:fuchsia.component.runner_hlcpp",
    "//sdk/fidl/fuchsia.debugdata:fuchsia.debugdata_hlcpp",
    "//sdk/fidl/fuchsia.sys2:fuchsia.sys2_hlcpp",
    "//sdk/fidl/fuchsia.test:fuchsia.test_hlcpp",
    "//sdk/lib/fit",
    "//sdk/lib/sys/cpp",
    "//sdk/lib/sys/cpp/testing:cpp",
    "//sdk/lib/syslog/cpp",
    "//src/lib/fsl",
    "//src/lib/pkg_url",
    "//src/sys/run_test_component:lib",
    "//zircon/system/ulib/async:async-cpp",
    "//zircon/system/ulib/async-loop:async-loop-cpp",
    "//zircon/system/ulib/async-loop:async-loop-default",
  ]
}

fuchsia_component("legacy_test_runner_cmp") {
  testonly = true
  component_name = "legacy-test-runner"
  deps = [ ":bin" ]
  manifest = "meta/legacy_test_runner.cml"
}

fuchsia_package("legacy-test-runner") {
  testonly = true
  visibility = [
    ":*",
    "//bundles/assembly/*",
    "//sdk/ctf/*",
    "//src/sys/test_manager:*",
  ]
  deps = [ ":legacy_test_runner_cmp" ]
}
