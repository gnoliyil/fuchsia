import("//build/components.gni")

fuchsia_test_component("echo_test_legacy") {
  component_name = "echo_test"
  manifest = "meta/echo_test.cmx"
  deps = [
    "//src/sys/test_manager/tests/nonhermetic_packaged_tests:echo_test_bin",
  ]
}

fuchsia_test_component("echo_test_modern") {
  component_name = "echo_test"
  manifest = "meta/echo_test.cml"
}

fuchsia_test_component("echo_server_legacy") {
  component_name = "echo_server"
  manifest = "meta/echo_server.cmx"
  deps =
      [ "//src/sys/component_manager/testing/echo_server:echo_server_testing" ]
}

group("echo_test") {
  testonly = true
  deps = [
    ":echo_server_legacy",
    ":echo_test_legacy",
    ":echo_test_modern",
  ]
}
