{
    include: [ "syslog/client.shard.cml" ],
    program: {
        runner: "elf",
        binary: "bin/starnix_test_runner",
    },
    capabilities: [
        {
            runner: "starnix_test_runner",
            path: "/svc/fuchsia.component.runner.ComponentRunner",
        },
    ],
    use: [
        {
            storage: "data",
            path: "/data",
        },
        {
            storage: "tmp",
            path: "/tmp",
        },
    ],
    expose: [
        {
            runner: "starnix_test_runner",
            from: "self",
        },
    ],
}
