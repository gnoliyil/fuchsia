{
    include: [
        "//src/sys/test_runners/lib.shard.cml",
        "syslog/client.shard.cml",
    ],
    program: {
        runner: "elf",
        binary: "bin/elf_test_runner",
        use_next_vdso: "true",
        use_direct_vdso: "true",
        job_policy_create_raw_processes: "true",
        job_policy_ambient_mark_vmo_exec: "true",
    },
    capabilities: [
        {
            runner: "elf_test_create_raw_processes_ambient_exec_runner",
            path: "/svc/fuchsia.component.runner.ComponentRunner",
        },
    ],
    use: [
        {
            protocol: [ "fuchsia.process.Launcher" ],
        },
    ],
    expose: [
        {
            runner: "elf_test_create_raw_processes_ambient_exec_runner",
            from: "self",
        },
    ],
}
