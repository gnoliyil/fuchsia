// Add cmx support to test_manager
{
    capabilities: [
        // This exists to prevent compilation failure on builds without appmgr.
        {
            protocol: [
                "fuchsia.sys.Environment",
                "fuchsia.sys.Loader",
            ],
        },
    ],
    offer: [
        {
            protocol: [
                "fuchsia.sys.Environment",
                "fuchsia.sys.Loader",
            ],
            from: "self",
            to: "#test_manager",
            dependency: "weak_for_migration",
        },
    ],
}
