{
    include: [ "syslog/client.shard.cml" ],
    program: {
        runner: "elf",
        binary: "bin/package_directory_exposer_bin",
    },
    capabilities: [
        {
            directory: "pkg",
            rights: [ "r*" ],
            path: "/pkg",
        },
    ],
    expose: [
        {
            directory: "pkg",
            from: "self",
        },
    ],
}
