{
    include: [ "sys/testing/system-test.shard.cml" ],
    children: [
        {
            name: "fake_dependencies",
            url: "#meta/fake-dependencies.cm",
        },
        {
            name: "base_resolver",
            url: "#meta/base-resolver.cm",
        },
        {
            name: "integration_test",
            url: "#meta/integration-test.cm",
        },
        {
            name: "subpackage_exposer",
            url: "subpackaged-component#meta/package-directory-exposer.cm",
        },
    ],
    offer: [
        {
            directory: "pkg",
            from: "#subpackage_exposer",
            as: "the-subpackage",
            to: "#fake_dependencies",
        },
        {
            directory: "blob-exec",
            from: "#fake_dependencies",
            to: "#base_resolver",
        },
        {
            protocol: "fuchsia.boot.Arguments",
            from: "#fake_dependencies",
            to: "#base_resolver",
        },
        {
            storage: "tmp",
            from: "parent",
            to: "#fake_dependencies",
        },
        {
            protocol: [
                "fuchsia.kernel.VmexResource",
                "fuchsia.process.Launcher",
            ],
            from: "parent",
            to: "#fake_dependencies",
        },
        {
            protocol: "fuchsia.logger.LogSink",
            from: "parent",
            to: [
                "#base_resolver",
                "#fake_dependencies",
                "#integration_test",
                "#subpackage_exposer",
            ],
        },
        {
            resolver: "base_resolver",
            from: "#base_resolver",
            to: "#integration_test",
        },
    ],
    expose: [
        {
            protocol: "fuchsia.test.Suite",
            from: "#integration_test",
        },
    ],
}
