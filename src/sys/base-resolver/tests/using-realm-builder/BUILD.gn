import("//build/components.gni")
import("//build/rust/rustc_test.gni")

rustc_test("driver") {
  name = "base_resolver_integration_test"
  edition = "2021"
  source_root = "src/lib.rs"
  sources = [ "src/lib.rs" ]
  deps = [
    "//sdk/fidl/fuchsia.boot:fuchsia.boot_rust",
    "//sdk/fidl/fuchsia.component.decl:fuchsia.component.decl_rust",
    "//sdk/fidl/fuchsia.component.resolution:fuchsia.component.resolution_rust",
    "//sdk/fidl/fuchsia.io:fuchsia.io_rust",
    "//sdk/fidl/fuchsia.logger:fuchsia.logger_rust",
    "//sdk/fidl/fuchsia.pkg:fuchsia.pkg_rust",
    "//src/lib/fidl/rust/fidl",
    "//src/lib/fuchsia",
    "//src/lib/fuchsia-component-test",
    "//src/lib/fuchsia-fs",
    "//src/lib/storage/vfs/rust:vfs",
    "//src/lib/versioning/version-history/rust:version-history",
    "//src/sys/lib/mem_util",
    "//src/sys/pkg/lib/fuchsia-hash",
    "//src/sys/pkg/lib/fuchsia-pkg",
    "//src/sys/pkg/lib/fuchsia-pkg-testing",
    "//src/sys/pkg/lib/system-image",
    "//src/sys/pkg/testing/blobfs-ramdisk",
    "//third_party/rust_crates:assert_matches",
    "//third_party/rust_crates:futures",
  ]
}

fuchsia_component("component") {
  testonly = true
  manifest = "meta/base-resolver-integration-test.cml"
  deps = [
    ":driver",
    "//src/storage/testing:storage_driver_test_realm",
    "//src/sys/base-resolver:base-resolver-component",
    "//src/sys/pkg/bin/pm:pm_bin",
  ]
}

fuchsia_test_package("base-resolver-integration-tests") {
  test_specs = {
    log_settings = {
      max_severity = "ERROR"
    }
  }
  test_components = [ ":component" ]
}

group("tests") {
  testonly = true
  public_deps = [ ":base-resolver-integration-tests" ]
}
