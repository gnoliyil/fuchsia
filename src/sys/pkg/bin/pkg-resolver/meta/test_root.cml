{
    include: [ "//src/connectivity/network/meta/isolated-network.shard.cml" ],
    children: [
        {
            name: "test_driver",
            url: "fuchsia-pkg://fuchsia.com/pkg-resolver-unit-tests#meta/test_driver.cm",
        },
    ],
    offer: [
        {
            protocol: [ "fuchsia.posix.socket.Provider" ],
            from: "#netstack",
            to: "#test_driver",
        },
        {
            protocol: [ "fuchsia.net.name.Lookup" ],
            from: "#dns_resolver",
            to: "#test_driver",
        },
        {
            protocol: [
                "fuchsia.logger.LogSink",
                "fuchsia.process.Launcher",
            ],
            from: "parent",
            to: "#test_driver",
        },
        {
            storage: "tmp",
            from: "parent",
            to: "#test_driver",
        },
        {
            directory: "root-ssl-certificates",
            from: "parent",
            to: "#test_driver",
        },
    ],
    expose: [
        {
            protocol: "fuchsia.test.Suite",
            from: "#test_driver",
        },
    ],
}
