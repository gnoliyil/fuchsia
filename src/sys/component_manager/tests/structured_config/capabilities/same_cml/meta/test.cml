{
    include: [
        "sys/testing/elf_test_runner.shard.cml",
        "syslog/client.shard.cml",
    ],
    program: {
        binary: "test/sc_capabilities_same_cml",
    },
    capabilities: [
        {
            config: "fuchsia.config.MyBool",
            type: "bool",
            value: true,
        },
        {
            config: "fuchsia.config.MyUint8",
            type: "uint8",
            value: 8,
        },
        {
            config: "fuchsia.config.MyUint16",
            type: "uint16",
            value: 16,
        },
        {
            config: "fuchsia.config.MyUint32",
            type: "uint32",
            value: 32,
        },
        {
            config: "fuchsia.config.MyUint64",
            type: "uint64",
            value: 64,
        },
        {
            config: "fuchsia.config.MyInt8",
            type: "int8",
            value: -8,
        },
        {
            config: "fuchsia.config.MyInt16",
            type: "int16",
            value: -16,
        },
        {
            config: "fuchsia.config.MyInt32",
            type: "int32",
            value: -32,
        },
        {
            config: "fuchsia.config.MyInt64",
            type: "int64",
            value: -64,
        },
        {
            config: "fuchsia.config.MyString",
            type: "string",
            max_size: 100,
            value: "test",
        },
        {
            config: "fuchsia.config.MyUint8Vector",
            type: "vector",
            element: { type: "uint8" },
            max_count: 100,
            value: [
                1,
                2,
                3,
            ],
        },
        {
            config: "fuchsia.config.MyStringVector",
            type: "vector",
            element: {
                type: "string",
                max_size: 100,
            },
            max_count: 100,
            value: [
                "Hello",
                "World!",
            ],
        },
    ],
    use: [
        {
            from: "self",
            config_key: "my_flag",
            config: "fuchsia.config.MyBool",
        },
        {
            from: "self",
            config_key: "my_uint8",
            config: "fuchsia.config.MyUint8",
        },
        {
            from: "self",
            config_key: "my_uint16",
            config: "fuchsia.config.MyUint16",
        },
        {
            from: "self",
            config_key: "my_uint32",
            config: "fuchsia.config.MyUint32",
        },
        {
            from: "self",
            config_key: "my_uint64",
            config: "fuchsia.config.MyUint64",
        },
        {
            from: "self",
            config_key: "my_int8",
            config: "fuchsia.config.MyInt8",
        },
        {
            from: "self",
            config_key: "my_int16",
            config: "fuchsia.config.MyInt16",
        },
        {
            from: "self",
            config_key: "my_int32",
            config: "fuchsia.config.MyInt32",
        },
        {
            from: "self",
            config_key: "my_int64",
            config: "fuchsia.config.MyInt64",
        },
        {
            from: "self",
            config_key: "my_string",
            config: "fuchsia.config.MyString",
        },
        {
            from: "self",
            config_key: "my_uint8_vector",
            config: "fuchsia.config.MyUint8Vector",
        },
        {
            from: "self",
            config_key: "my_string_vector",
            config: "fuchsia.config.MyStringVector",
        },
    ],
    config: {
        my_flag: { type: "bool" },
        my_uint8: { type: "uint8" },
        my_uint16: { type: "uint16" },
        my_uint32: { type: "uint32" },
        my_uint64: { type: "uint64" },
        my_int8: { type: "int8" },
        my_int16: { type: "int16" },
        my_int32: { type: "int32" },
        my_int64: { type: "int64" },
        my_string: {
            type: "string",
            max_size: 100,
        },
        my_uint8_vector: {
            type: "vector",
            element: { type: "uint8" },
            max_count: 100,
        },
        my_string_vector: {
            type: "vector",
            element: {
                type: "string",
                max_size: 100,
            },
            max_count: 100,
        },
    },
}
