{
    include: [ "inspect/offer.shard.cml" ],
    children: [
        {
            name: "archivist",
            url: "#meta/archivist-for-embedding.cm",
        },
        {
            name: "cleanup",
            url: "#meta/cleanup.cm",
            startup: "eager",
        },
    ],
    offer: [
        {
            protocol: [ "fuchsia.logger.LogSink" ],
            from: "parent",
            to: [
                "#archivist",
                "#cleanup",
            ],
        },
        {
            protocol: [ "fuchsia.diagnostics.ArchiveAccessor" ],
            from: "#archivist",
            to: "#cleanup",
        },
        {
            event_stream: [
                "destroyed",
                "started",
            ],
            from: "parent",
            to: "#cleanup",
            scope: "#cleanup",
        },
        {
            event_stream: [
                "capability_requested",
                "directory_ready",
            ],
            from: "parent",
            to: "#archivist",
        },
    ],
}
