{
    include: [
        "sys/component/realm_builder.shard.cml",
        "syslog/client.shard.cml",
    ],
    program: {
        runner: "elf",
        binary: "bin/cleanup",
    },
    collections: [
        {
            name: "coll",
            durability: "transient",
        },
    ],
    use: [
        {
            protocol: [
                "fuchsia.diagnostics.ArchiveAccessor",
                "fuchsia.sys2.EventSource",
            ],
            from: "parent",
        },
        {
            event_stream: [
                "destroyed",
                "started",
            ],
            from: "parent",
        },
    ],
    offer: [
        {
            protocol: [ "fuchsia.logger.LogSink" ],
            from: "parent",
            to: "#coll",
        },
    ],
}
