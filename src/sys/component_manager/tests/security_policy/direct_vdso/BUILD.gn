import("//build/components.gni")

group("tests") {
  testonly = true
  deps = [ ":security-policy-direct-vdso-test" ]
}

executable("bin") {
  output_name = "security-policy-direct-vdso-test"
  sources = [ "main.cc" ]
  deps = [ "//src/lib/test-suite:test_suite_lib" ]
}

fuchsia_unittest_package("security-policy-direct-vdso-test") {
  manifest = "meta/security-policy-direct-vdso-test.cml"
  deps = [ ":bin" ]
}
