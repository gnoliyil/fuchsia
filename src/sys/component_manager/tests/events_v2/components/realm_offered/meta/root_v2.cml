{
    // The nested realm that will bootstrap what we want to test.
    children: [
        {
            name: "nested_realm",
            url: "#meta/realm_offered_nested_v2.cm",
            startup: "eager",
        },
    ],

    // Route Echo service from server to client.
    offer: [
        {
            protocol: [
                "fuchsia.logger.LogSink",
                "fuchsia.sys2.EventSource",
            ],
            from: "parent",
            to: "#nested_realm",
        },
        {
            event_stream: [
                "started",
                "stopped",
            ],
            from: "parent",
            to: "#nested_realm",
            scope: [ "#nested_realm" ],
        },
    ],
}
