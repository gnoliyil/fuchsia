{
    include: [ "syslog/client.shard.cml" ],
    program: {
        runner: "elf",
        binary: "bin/scoped_echo_reporter_v2",
    },
    children: [
        {
            name: "echo_server",
            url: "#meta/echo_server_v2.cm",
        },
    ],
    use: [
        {
            protocol: [ "fuchsia.sys2.EventSource" ],
        },
        {
            event_stream: [
                "started",
                "stopped",
            ],
            from: "parent",
        },
    ],
    offer: [
        {
            protocol: "fuchsia.logger.LogSink",
            from: "parent",
            to: "#echo_server",
        },
    ],
    expose: [
        {
            protocol: "fidl.examples.routing.echo.Echo",
            from: "#echo_server",
        },
    ],
}
