{
    // Two children: a server and client. "echo_client" has "eager" startup so it
    // will be started along with the realm.
    children: [
        {
            name: "echo_reporter",
            url: "#meta/echo_reporter_v2.cm",
            startup: "eager",
        },
        {
            name: "echo_client",
            url: "#meta/echo_client_v2.cm",
            startup: "eager",
        },
    ],

    // Route Echo service from server to client.
    offer: [
        {
            protocol: "fuchsia.sys2.EventSource",
            from: "parent",
            to: "#echo_reporter",
        },
        {
            protocol: "fuchsia.logger.LogSink",
            from: "parent",
            to: [
                "#echo_client",
                "#echo_reporter",
            ],
        },
        {
            protocol: "fidl.examples.routing.echo.Echo",
            from: "#echo_reporter",
            to: "#echo_client",
        },
        {
            event_stream: [
                "started",
                "stopped",
            ],
            from: "parent",
            to: "#echo_reporter",
            scope: [
                "#echo_client",
                "#echo_reporter",
            ],
        },
    ],
}
