{
    include: [
        "sys/component/realm_builder.shard.cml",
        "syslog/client.shard.cml",
    ],
    program: {
        runner: "elf",
        binary: "bin/async_reporter_v2",
    },
    collections: [
        {
            name: "coll",
            durability: "transient",
        },
    ],
    use: [
        {
            protocol: [ "fuchsia.sys2.EventSource" ],
        },
        {
            event_stream: [
                "destroyed",
                "started",
            ],
            from: "parent",
            scope: "#coll",
        },
    ],
}
