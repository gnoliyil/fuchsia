{
    include: [
        "syslog/client.shard.cml",
        "trace/use.shard.cml",
    ],
    program: {
        runner: "elf",
        binary: "bin/virtio_sound",
    },
    capabilities: [
        {
            protocol: [ "fuchsia.virtualization.hardware.VirtioSound" ],
        },
    ],
    use: [
        {
            protocol: [
                "fuchsia.media.Audio",
                "fuchsia.scheduler.ProfileProvider",
            ],
        },
    ],
    expose: [
        {
            protocol: [ "fuchsia.virtualization.hardware.VirtioSound" ],
            from: "self",
        },
    ],
}
