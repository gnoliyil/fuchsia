import("//src/virtualization/bin/args.gni")

config("args") {
  defines = []
  if (rust_virtio_net) {
    defines += [ "USE_RUST_VIRTIO_NET" ]
  }

  if (virtio_wl_local_wayland_server) {
    defines += [ "USE_VIRTIO_WL_LOCAL_WAYLAND_SERVER" ]
  }
}

group("bin") {
  # Remove this once termina_guest_manager no longer sets "termina_extras_tests" to
  # "true" by default.
  testonly = true

  deps = [
    "guest",
    "guest_manager:packages",
    "guest_manager_rs:packages",
    "termina_guest_manager",
    "vmm",
    "vmm_launcher",
    "vmm_rs",
  ]
}

group("tests") {
  testonly = true

  deps = [
    "guest:tests",
    "guest_manager:tests",
    "guest_manager_rs:tests",
    "termina_guest_manager:tests",
    "vmm:tests",
    "vmm_launcher:tests",
    "vmm_rs:tests",
  ]
}
