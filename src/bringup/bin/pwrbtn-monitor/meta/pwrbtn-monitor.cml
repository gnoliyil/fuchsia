{
    include: [ "syslog/client.shard.cml" ],
    program: {
        runner: "elf",
        binary: "bin/pwrbtn-monitor",
    },
    capabilities: [
        { protocol: "fuchsia.power.button.Monitor" },
    ],
    use: [
        {
            directory: "input",
            rights: [ "r*" ],
            path: "/input",
        },
        {
            protocol: [
                "fuchsia.boot.WriteOnlyLog",
                "fuchsia.hardware.power.statecontrol.Admin",
                "fuchsia.kernel.RootJob",
            ],
        },
    ],
    expose: [
        {
            protocol: "fuchsia.power.button.Monitor",
            from: "self",
        },
    ],
}
