{
    program: {
        runner: "elf",
        binary: "bin/sysinfo",
        forward_stdout_to: "none",
        forward_stderr_to: "none",
    },
    capabilities: [
        { protocol: "fuchsia.sysinfo.SysInfo" },
    ],
    use: [
        {
            directory: "dev-topological",
            rights: [ "r*" ],
            path: "/dev",
        },
        { protocol: "fuchsia.boot.WriteOnlyLog" },
    ],
    expose: [
        {
            protocol: "fuchsia.sysinfo.SysInfo",
            from: "self",
        },
    ],
}
