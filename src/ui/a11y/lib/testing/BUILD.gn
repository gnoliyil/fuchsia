group("testing") {
  testonly = true

  public_deps = [
    ":formatting",
    ":input",
    ":input_v2",
    ":view_ref_helper",
  ]
}

source_set("formatting") {
  testonly = true

  public = [ "formatting.h" ]

  sources = [ "formatting.cc" ]

  public_deps = [
    "//third_party/glm",
    "//zircon/system/ulib/zx",
  ]
}

source_set("input") {
  testonly = true

  public = [ "input.h" ]

  sources = [ "input.cc" ]

  public_deps = [
    "//sdk/fidl/fuchsia.ui.input:fuchsia.ui.input_hlcpp",
    "//sdk/fidl/fuchsia.ui.input.accessibility:fuchsia.ui.input.accessibility_hlcpp",
    "//third_party/glm",
  ]
}

source_set("input_v2") {
  testonly = true

  public = [ "input_v2.h" ]

  sources = [ "input_v2.cc" ]

  public_deps = [
    "//sdk/fidl/fuchsia.ui.input:fuchsia.ui.input_hlcpp",
    "//sdk/fidl/fuchsia.ui.input.accessibility:fuchsia.ui.input.accessibility_hlcpp",
    "//third_party/glm",
  ]
}

source_set("view_ref_helper") {
  testonly = true

  public = [ "view_ref_helper.h" ]

  sources = [ "view_ref_helper.cc" ]

  public_deps = [
    "//sdk/fidl/fuchsia.ui.views:fuchsia.ui.views_hlcpp",
    "//sdk/lib/syslog/cpp",
    "//src/lib/fsl",
    "//src/lib/fxl",
    "//src/ui/a11y/lib/util",
  ]
}
