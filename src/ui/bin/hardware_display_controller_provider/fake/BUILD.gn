executable("bin") {
  testonly = true
  output_name = "fake_hw_display_controller_provider"

  configs += [ "//build/config:all_source" ]

  sources = [ "main.cc" ]

  deps = [
    ":lib",
    "//zircon/system/ulib/async-loop:async-loop-cpp",
    "//zircon/system/ulib/async-loop:async-loop-default",
    "//zircon/system/ulib/trace-provider",
  ]
}

source_set("lib") {
  testonly = true

  configs += [ "//build/config:all_source" ]

  sources = [
    "service.cc",
    "service.h",
  ]

  public_deps = [
    "//sdk/fidl/fuchsia.hardware.display:fuchsia.hardware.display_hlcpp",
    "//sdk/lib/sys/cpp",
    "//src/graphics/display/drivers/fake:mock-display-device-tree",
    "//src/graphics/display/drivers/fake:sysmem-proxy-device",
  ]
}
