group("tests") {
  testonly = true

  public_deps = [ ":unittests" ]
}

executable("unittests") {
  output_name = "display_unittests"
  testonly = true
  sources = [
    "display_controller_listener_unittest.cc",
    "display_controller_unittest.cc",
    "display_manager_unittest.cc",
    "display_power_manager_unittest.cc",
    "singleton_display_service_unittest.cc",
  ]
  deps = [
    ":mocks",
    "//src/lib/fxl/test:gtest_main",
    "//src/lib/testing/loop_fixture:gtest",
    "//src/ui/scenic/lib/display",
    "//src/ui/scenic/lib/display:singleton_display_service",
  ]
}

source_set("mocks") {
  testonly = true
  sources = [
    "mock_display_controller.cc",
    "mock_display_controller.h",
  ]
  public_deps = [
    "//sdk/fidl/fuchsia.hardware.display:fuchsia.hardware.display_hlcpp",
    "//src/lib/fsl",
    "//src/ui/scenic/lib/display",
  ]
}
