composite backlight;

using fuchsia.hardware.pwm;
using fuchsia.hardware.gpio;

primary node "pwm" {
  fuchsia.BIND_FIDL_PROTOCOL == fuchsia.hardware.pwm.BIND_FIDL_PROTOCOL.DEVICE;
  fuchsia.hardware.pwm.PWM_ID_FUNCTION == fuchsia.hardware.pwm.PWM_ID_FUNCTION.LCD_BRIGHTNESS;
}

node "gpio-lcd-backlight-enable" {
  fuchsia.BIND_PROTOCOL == fuchsia.hardware.gpio.BIND_PROTOCOL.DEVICE;
  fuchsia.hardware.gpio.FUNCTION == fuchsia.hardware.gpio.FUNCTION.LCD_BACKLIGHT_ENABLE;
}
