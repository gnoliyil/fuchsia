{
    include: [ "syslog/client.shard.cml" ],
    program: {
        runner: "elf",
        binary: "bin/backlight",
    },
    use: [
        {
            protocol: [ "fuchsia.tracing.provider.Registry" ],
        },
        {
            directory: "dev-backlight",
            rights: [ "r*" ],
            path: "/dev/class/backlight",
        },
    ],
}
