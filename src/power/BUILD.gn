group("power") {
  testonly = true
  deps = [
    ":battery",
    ":tests",
    "power-manager",
    "shutdown-shim",
  ]

  if (target_cpu == "x64") {
    deps += [ "thermd" ]
  }
}

group("battery") {
  deps = [
    "battery-manager",
    "battery-manager/battery-cli",
  ]
}

group("drivers") {
  deps = [ "fake-battery/:fake_battery_component" ]
}

group("tests") {
  testonly = true
  deps = [
    "battery-manager",
    "battery-manager:tests",
    "battery-manager/battery-cli:tests",
    "fake-battery:tests",
    "fidl/testing",
    "power-manager:tests",
    "shutdown-shim/tests",
    "testing:tests",
    "thermd:tests",
  ]
}
