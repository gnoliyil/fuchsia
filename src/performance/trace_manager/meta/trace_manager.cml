{
    include: [ "syslog/client.shard.cml" ],
    program: {
        runner: "elf",
        binary: "bin/trace_manager",
    },
    children: [
        {
            name: "ktrace_provider",
            url: "ktrace_provider#meta/ktrace_provider.cm",
            startup: "eager",
        },
        {
            name: "cpuperf_provider",
            url: "cpuperf_provider#meta/cpuperf_provider.cm",
            startup: "eager",
        },
        {
            name: "perfetto-bridge",
            url: "perfetto-bridge#meta/perfetto-bridge.cm",
            startup: "eager",
        },
    ],
    capabilities: [
        {
            protocol: [
                "fuchsia.tracing.controller.Controller",
                "fuchsia.tracing.provider.Registry",
            ],
        },
    ],
    offer: [
        {
            protocol: [ "fuchsia.tracing.provider.Registry" ],
            from: "self",
            to: [
                "#cpuperf_provider",
                "#ktrace_provider",
                "#perfetto-bridge",
            ],
        },
        {
            protocol: [ "fuchsia.logger.LogSink" ],
            from: "parent",
            to: [
                "#cpuperf_provider",
                "#ktrace_provider",
                "#perfetto-bridge",
            ],
        },
        {
            directory: "dev-topological",
            from: "parent",
            to: "#cpuperf_provider",
        },
        {
            storage: "tmp",
            from: "parent",
            to: "#perfetto-bridge",
        },
        {
            protocol: [
                "fuchsia.boot.ReadOnlyLog",
                "fuchsia.tracing.kernel.Controller",
                "fuchsia.tracing.kernel.Reader",
            ],
            from: "parent",
            to: [ "#ktrace_provider" ],
        },
    ],
    expose: [
        {
            protocol: "fuchsia.tracing.controller.Controller",
            from: "self",
        },
        {
            protocol: "fuchsia.tracing.provider.Registry",
            from: "self",
        },
        {
            protocol: "fuchsia.tracing.perfetto.ProducerConnector",
            from: "#perfetto-bridge",
        },
    ],
}
