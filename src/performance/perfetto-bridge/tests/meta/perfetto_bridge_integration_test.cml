{
    include: [
        "//src/sys/test_runners/gtest/default.shard.cml",
        "syslog/client.shard.cml",
    ],
    program: {
        binary: "bin/perfetto_bridge_integration_test",
    },
    children: [
        {
            name: "trace_manager",
            url: "#meta/trace_manager.cm",
        },
        {
            name: "perfetto-bridge",
            url: "#meta/perfetto-bridge.cm",
            startup: "eager",
        },
        {
            name: "perfetto_producer",
            url: "#meta/perfetto_producer.cm",
            startup: "eager",
        },
    ],
    use: [
        {
            protocol: "fuchsia.tracing.controller.Controller",
            from: "#trace_manager",
        },
    ],
    offer: [
        {
            protocol: [ "fuchsia.tracing.provider.Registry" ],
            from: "#trace_manager",
            to: "#perfetto-bridge",
        },
        {
            protocol: [ "fuchsia.tracing.perfetto.ProducerConnector" ],
            from: "#perfetto-bridge",
            to: [ "#perfetto_producer" ],
        },
        {
            protocol: [ "fuchsia.tracing.perfetto.BufferReceiver" ],
            from: "#perfetto_producer",
            to: [ "#perfetto-bridge" ],
            dependency: "weak",
        },
        {
            protocol: [ "fuchsia.logger.LogSink" ],
            from: "parent",
            to: [
                "#perfetto-bridge",
                "#perfetto_producer",
                "#trace_manager",
            ],
        },
        {
            protocol: [ "fuchsia.device.NameProvider" ],
            from: "parent",
            to: [ "#perfetto-bridge" ],
        },
        {
            storage: "tmp",
            from: "parent",
            to: "#perfetto-bridge",
        },
    ],
}
