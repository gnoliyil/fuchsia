{
    include: [
        "//src/sys/test_runners/rust/default.shard.cml",
        "sys/component/realm_builder.shard.cml",
        "syslog/client.shard.cml",
    ],
    program: {
        binary: "bin/detect_integration_test",
    },
    use: [
        { protocol: "fuchsia.diagnostics.test.RealmFactory" },

        // TODO(124589): Remove this capability when all tests are migrated to use the test realm factory.
