import("//build/components.gni")

test_names = [
  "list_accessors",
  "list_archive",
  "list_files_basic",
  "list_files_all",
  "list_filter_manifest",
  "list_no_dups",
  "list_test",
  "list_with_url",
  "selectors_archive",
  "selectors_filter_test",
  "selectors_test",
  "show_all_test",
  "show_archive",
  "show_filter_no_selectors_test",
  "show_filter_test",
  "show_test",
  "show_test_with_file_deprecated_inspect",
  "show_test_with_file_root_inspect",
  "show_test_with_file_glob",
]

formats = [
  "json",
  "text",
]

golden_deps = []
foreach(test_name, test_names) {
  foreach(format, formats) {
    golden_name = test_name + "." + format

    resource(golden_name + "_golden") {
      sources = [ golden_name ]
      outputs = [ "data/goldens/" + golden_name ]
    }

    golden_deps += [ ":" + golden_name + "_golden" ]
  }
}

group("goldens") {
  deps = golden_deps
}
