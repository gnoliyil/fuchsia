import("//build/components.gni")

executable("puppet") {
  output_name = "log_validator_cpp_puppet"
  testonly = true
  sources = [ "puppet.cc" ]

  deps = [
    "../../fidl:validate_hlcpp",
    "//sdk/fidl/fuchsia.diagnostics.stream:fuchsia.diagnostics.stream_hlcpp",
    "//sdk/lib/fidl",
    "//sdk/lib/sys/cpp",
    "//sdk/lib/syslog/cpp:backend",
    "//sdk/lib/syslog/cpp:cpp",
    "//sdk/lib/syslog/streams/cpp:streams",
    "//sdk/lib/syslog/streams/cpp:streams-encoder",
    "//src/lib/fsl",
    "//zircon/system/ulib/async-loop:async-loop-cpp",
    "//zircon/system/ulib/async-loop:async-loop-default",
  ]
}

fuchsia_component("component") {
  component_name = "puppet"
  testonly = true
  manifest = "meta/puppet.cml"
  deps = [ ":puppet" ]
}

fuchsia_package("cpp") {
  testonly = true
  package_name = "cpp-puppet"
  deps = [ ":component" ]
}
