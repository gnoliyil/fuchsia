group("diagnostics") {
  testonly = true
  deps = [
    ":tests",
    "archivist",
    "config",
    "kcounter",
    "sampler",
    "wasm",
  ]
}

group("tests") {
  testonly = true
  deps = [
    "archivist:tests",
    "config:tests",
    "detect:tests",
    "iquery:tests",
    "kcounter:tests",
    "lib:tests",
    "log_listener:tests",
    "persistence:tests",
    "sampler:tests",
    "tests",
    "triage:tests",
    "validator:tests",
    "wasm:tests",

    # This is included to make sure changes to fuchsia_async (or elsewhere)
    # don't break the WASM build.
    "//src/diagnostics/lib/triage/wasm:wasm",
  ]
}

group("benchmarks") {
  testonly = true
  deps = [ "archivist:benchmarks" ]
}
