{
    include: [ "syslog/client.shard.cml" ],
    program: {
        runner: "elf",
        binary: "bin/expectation_comparer",
    },
    capabilities: [
        { protocol: "fuchsia.test.Suite" },
    ],
    use: [
        {
            protocol: "fuchsia.test.Suite",
            from: "parent",
        },
        {
            directory: "expectations",
            from: "parent",
            rights: [ "r*" ],
            path: "/expectations",
            availability: "optional",
        },
    ],
    expose: [
        {
            protocol: "fuchsia.test.Suite",
            from: "self",
        },
    ],
}
