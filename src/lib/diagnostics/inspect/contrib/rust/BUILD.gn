import("//build/components.gni")
import("//build/rust/rustc_library.gni")

rustc_library("fuchsia-inspect-contrib") {
  name = "fuchsia_inspect_contrib"
  version = "0.1.0"
  edition = "2021"
  with_unit_tests = true

  deps = [
    "//src/diagnostics/persistence/fidl:persist_rust",
    "//src/lib/diagnostics/inspect/rust",
    "//src/lib/fuchsia-async",
    "//src/lib/injectable-time",
    "//src/lib/zircon/rust:fuchsia-zircon",
    "//third_party/rust_crates:derivative",
    "//third_party/rust_crates:futures",
    "//third_party/rust_crates:tracing",
  ]

  test_deps = [
    "//src/lib/fidl/rust/fidl",
    "//src/lib/fuchsia",
    "//third_party/rust_crates:parking_lot",
    "//third_party/rust_crates:pin-utils",
  ]

  sources = [
    "src/auto_persist.rs",
    "src/inspectable/mod.rs",
    "src/lib.rs",
    "src/log/impls.rs",
    "src/log/mod.rs",
    "src/log/wrappers.rs",
    "src/nodes/list.rs",
    "src/nodes/mod.rs",
  ]
}

fuchsia_unittest_package("fuchsia-inspect-contrib-tests") {
  deps = [ ":fuchsia-inspect-contrib_test" ]

  test_specs = {
    log_settings = {
      max_severity = "ERROR"
    }
  }
}

group("rust") {
  public_deps = [ ":fuchsia-inspect-contrib" ]
}

group("tests") {
  testonly = true
  deps = [ ":fuchsia-inspect-contrib-tests" ]
}
