declare_args() {
  # Path to file to use for recovery logo
  icons_path = "//src/recovery/system/res/ota_icons.riv"
  instructions_path = "//src/recovery/system/res/instructions.txt"
  recovery_logo_path = "//src/recovery/system/res/fuchsia-logo.riv"
  roboto_font_path = "//prebuilt/third_party/fonts/roboto/Roboto-Regular.ttf"
  qr_codes_path = "//src/recovery/system/res/qr_codes.riv"

  # Whether to use the new UX UI
  enable_recovery_ui_v2 = true

  # Whether to log lots of debug info including PII
  enable_recovery_ui_v2_debug_logging = false
}
