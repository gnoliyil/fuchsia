declare_args() {
  camera_debug = false
}

if (camera_debug) {
  camera_debug_define = "CAMERA_MIN_LOG_LEVEL=(fuchsia_logging::LOG_DEBUG)"
} else {
  camera_debug_define =
      "CAMERA_MIN_LOG_LEVEL=(fuchsia_logging::DefaultLogLevel)"
}
