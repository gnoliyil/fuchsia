import("//build/components.gni")
import("//build/test.gni")

test("display-core-unittests") {
  configs += [ "//build/config:all_source" ]
  sources = [
    "display-test.cc",
    "eld-test.cc",
    "fence-test.cc",
    "image-test.cc",
    "integration-test.cc",
    "layer-test.cc",
  ]
  include_dirs = [ ".." ]
  deps = [
    ":base",
    "//sdk/banjo/fuchsia.hardware.platform.device:fuchsia.hardware.platform.device_banjo_cpp",
    "//sdk/banjo/fuchsia.hardware.sysmem:fuchsia.hardware.sysmem_banjo_cpp",
    "//sdk/fidl/fuchsia.hardware.display:fuchsia.hardware.display_cpp_wire_testing",
    "//sdk/fidl/fuchsia.sysmem:fuchsia.sysmem_cpp_wire",
    "//sdk/fidl/fuchsia.sysmem2:fuchsia.sysmem2_cpp_wire",
    "//zircon/system/ulib/async-testing",
    "//zircon/system/ulib/fbl",
    "//zircon/system/ulib/zircon-internal",
  ]
}

static_library("base") {
  configs += [ "//build/config:all_source" ]
  testonly = true
  sources = [
    "base.cc",
    "fidl_client.cc",
    "fidl_client.h",
  ]
  deps = [
    "//sdk/banjo/fuchsia.hardware.platform.device:fuchsia.hardware.platform.device_banjo_cpp",
    "//sdk/banjo/fuchsia.hardware.sysmem:fuchsia.hardware.sysmem_banjo_cpp",
    "//src/devices/testing/mock-ddk",
    "//src/lib/fsl",
  ]
  public_deps = [
    "//sdk/fidl/fuchsia.hardware.display:fuchsia.hardware.display_cpp_wire",
    "//sdk/fidl/fuchsia.sysmem:fuchsia.sysmem_cpp_wire",
    "//sdk/fidl/fuchsia.sysmem2:fuchsia.sysmem2_cpp_wire",
    "//src/devices/sysmem/drivers/sysmem:sysmem_common_srcs",
    "//src/graphics/display/drivers/display:shared",
    "//src/graphics/display/drivers/fake:mock-display-device-tree",
    "//zircon/system/ulib/async-testing",
    "//zircon/system/ulib/zircon-internal",
    "//zircon/system/ulib/zxtest",
  ]
}

group("tests") {
  testonly = true
  deps = [ ":display-core-unittests-package" ]
}

fuchsia_unittest_package("display-core-unittests-package") {
  package_name = "display-core-unittests"
  deps = [ ":display-core-unittests" ]
  test_specs = {
    log_settings = {
      max_severity = "ERROR"
    }
  }
}
