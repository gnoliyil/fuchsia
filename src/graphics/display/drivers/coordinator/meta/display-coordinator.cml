{
    include: [
        "//sdk/lib/driver/compat/compat.shard.cml",
        "inspect/client.shard.cml",
        "syslog/client.shard.cml",
    ],
    program: {
        runner: "driver",

        // TODO(fxbug.com/122937): Rename to "display-coordinator.bindbc".
        bind: "meta/bind/display.bindbc",
        colocate: "true",

        // TODO(fxbug.com/122937): Rename to "display-coordinator.so".
        compat: "driver/display.so",
        default_dispatcher_opts: [ "allow_sync_calls" ],
        fallback: "false",
    },
    use: [
        { protocol: "fuchsia.boot.RootResource" },
        { protocol: "fuchsia.scheduler.ProfileProvider" },
        { protocol: "fuchsia.boot.Arguments" },
    ],
}
