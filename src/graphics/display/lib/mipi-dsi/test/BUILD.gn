import("//build/components.gni")
import("//build/test.gni")

group("test") {
  testonly = true
  deps = [ ":mipidsi" ]
}

test("mipidsi") {
  output_name = "mipidsi-test"
  if (is_fuchsia) {
    fdio_config = [ "//build/config/fuchsia:fdio_config" ]
    if (configs + fdio_config - fdio_config != configs) {
      configs -= fdio_config
    }
  }
  sources = [ "mipi-dsi-test.cc" ]
  deps = [
    "//sdk/banjo/fuchsia.hardware.dsiimpl:fuchsia.hardware.dsiimpl_banjo_cpp",
    "//sdk/fidl/fuchsia.hardware.dsi:fuchsia.hardware.dsi_cpp_wire",
    "//sdk/lib/fdio",
    "//src/graphics/display/lib/mipi-dsi",
    "//src/lib/fxl/test:gtest_main",
    "//src/lib/testing/predicates",
    "//third_party/googletest:gtest",
    "//zircon/system/ulib/fbl",
    "//zircon/system/ulib/zx",
  ]
}

fuchsia_unittest_package("mipidsi-test-pkg") {
  package_name = "mipidsi-test"
  deps = [ ":mipidsi" ]
}

group("tests") {
  testonly = true
  deps = [ ":mipidsi-test-pkg" ]
}
