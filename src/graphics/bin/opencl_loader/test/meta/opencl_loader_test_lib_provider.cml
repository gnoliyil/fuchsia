{
    include: [ "syslog/client.shard.cml" ],
    program: {
        runner: "elf",
        binary: "bin/opencl-server",
    },
    capabilities: [
        {
            // /dev directory is always empty. It's used for device paths that
            // aren't required by the icd loader.
            directory: "empty",
            rights: [ "r*" ],
            path: "/dev",
        },
        {
            directory: "dev-gpu",
            rights: [ "r*" ],
            path: "/dev-gpu",
        },
    ],
    expose: [
        {
            directory: "dev-gpu",
            from: "self",
            rights: [ "r*" ],
        },
        {
            directory: "empty",
            from: "self",
            as: "dev-gpu-dependency-injection",
            rights: [ "r*" ],
        },
    ],
}
