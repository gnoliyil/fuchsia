import("//src/graphics/lib/magma/gnbuild/magma.gni")

config("magma_config") {
  include_dirs = [ "." ]
}

source_set("magma") {
  public_configs = [ ":magma_config" ]

  sources = [
    "magma/magma.h",
    "magma/magma_sysmem.h",
  ]

  public_deps = [ ":magma_common" ]
}

source_set("magma_common") {
  public_configs = [ ":magma_config" ]

  sources = [ "magma/magma_common_defs.h" ]
}

config("msd_config") {
  include_dirs = [ "msd" ]
}

source_set("msd_defs") {
  public_configs = [ ":msd_config" ]
  sources = [ "msd/msd_defs.h" ]
  public_deps = [ ":magma_common" ]
}

source_set("msd") {
  sources = [ "msd/msd.h" ]

  public_deps = [
    ":magma_common",
    ":msd_defs",
  ]
}

source_set("msd_cc") {
  sources = [
    "msd/msd_cc.cc",
    "msd/msd_cc.h",
  ]

  public_deps = [
    ":msd_defs",
    "//sdk/lib/stdcompat",
    "//zircon/system/ulib/async",
    "//zircon/system/ulib/zx",
  ]
}

# TODO(fxbug.dev/85557) - remove
group("magma_abi") {
  public_deps = [ ":magma" ]
}
