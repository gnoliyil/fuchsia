{
    include: [
        "syslog/client.shard.cml",
        "vulkan/client.shard.cml",
    ],
    use: [
        {
            storage: "cache",
            rights: [ "rw*" ],
            path: "/cache",
        },
        {
            storage: "tmp",
            rights: [ "w*" ],
            path: "/tmp",
        },
        {
            directory: "dev-display-controller",
            rights: [ "r*" ],
            path: "/dev/class/display-controller",
        },
        {
            directory: "dev-input",
            rights: [ "r*" ],
            path: "/dev/class/input",
        },
        {
            directory: "dev-input-report",
            rights: [ "r*" ],
            path: "/dev/class/input-report",
        },
    ],
}
