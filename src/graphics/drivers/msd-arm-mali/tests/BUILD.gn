import("//build/components.gni")
import("//src/graphics/lib/magma/gnbuild/magma.gni")

group("tests") {
  testonly = true
  deps = [
    ":integration",
    ":nonhardware_tests",
  ]
}

group("nonhardware_tests") {
  testonly = true
  deps = [
    ":msd_arm_mali_dfv2_tests",
    ":msd_arm_mali_nonhardware_tests",
  ]
}

group("integration") {
  testonly = true
  deps = [ ":msd-arm-mali-integration-tests" ]
}

fuchsia_unittest_package("msd_arm_mali_nonhardware_tests") {
  deps = [ "unit_tests:msd_arm_mali_nonhardware_tests" ]
  manifest = "meta/msd_arm_mali_nonhardware_tests.cml"
  test_specs = {
    log_settings = {
      max_severity = "ERROR"
    }
  }
}

fuchsia_unittest_package("msd_arm_mali_dfv2_tests") {
  deps = [ "unit_tests:msd_arm_mali_dfv2_tests" ]
  test_specs = {
    log_settings = {
      max_severity = "ERROR"
    }
  }
}

fuchsia_unittest_package("msd-arm-mali-integration-tests") {
  deps = [ "integration" ]
  manifest = "meta/msd_arm_mali_integration_tests.cml"
  test_specs = {
    environments = arm_gpu_envs
    log_settings = {
      max_severity = "ERROR"
    }
  }
}
