import("//build/bind/bind.gni")
import("//build/components.gni")
import("//build/drivers.gni")

driver_bind_rules("aml_pl_mailbox_bind") {
  rules = "aml_pl_mailbox.bind"
  bind_output = "aml-pl-mailbox.bindbc"
  tests = "bind-tests.json"
  deps = [
    "//src/devices/bind/fuchsia.amlogic.platform",
    "//src/devices/bind/fuchsia.platform",
  ]
}

fuchsia_driver("aml-pl-mailbox-driver") {
  output_name = "aml-pl-mailbox"
  configs += [
    "//build/config:all_source",
    "//build/config/fuchsia:enable_zircon_asserts",
  ]
  sources = [ "aml-pl-mailbox.cc" ]
  deps = [
    ":aml_pl_mailbox_bind",
    "//sdk/fidl/fuchsia.hardware.mailbox:fuchsia.hardware.mailbox_cpp",
    "//sdk/lib/component/outgoing/cpp",
    "//sdk/lib/driver/runtime:driver_runtime_cpp",
    "//src/devices/bus/lib/device-protocol-pdev",
    "//src/devices/lib/driver",
    "//src/devices/lib/driver:driver_runtime",
    "//src/devices/lib/mmio",
    "//src/lib/ddk",
    "//src/lib/ddktl",
    "//zircon/system/ulib/async-loop:async-loop-cpp",
    "//zircon/system/ulib/fbl",
    "//zircon/system/ulib/hwreg",
    "//zircon/system/ulib/sync",
  ]
}

fuchsia_driver_component("aml-pl-mailbox") {
  component_name = "aml-pl-mailbox"
  deps = [ ":aml-pl-mailbox-driver" ]
  info = "aml-pl-mailbox-info.json"
  manifest = "meta/aml-pl-mailbox.cml"
}
