}

driver_bind_rules("clover-dsp-bind") {
  rules = "bind/clover-dsp.bind"
  header_output = "clover-dsp-bind.h"
  bind_output = "clover-dsp-bind.bc"
  deps = [
    "//src/devices/bind/fuchsia.amlogic.platform",
    "//src/devices/bind/fuchsia.amlogic.platform.a1",
    "//src/devices/bind/fuchsia.amlogic.platform.meson",
    "//src/devices/bind/fuchsia.hardware.clock",
    "//src/devices/bind/fuchsia.mailbox",
    "//src/devices/bind/fuchsia.platform",
  ]
