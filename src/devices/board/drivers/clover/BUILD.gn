driver_bind_rules("clover-sdio-bind") {
  rules = "bind/clover-sdio.bind"
  header_output = "clover-sdio-bind.h"
  bind_output = "clover-sdio-bind.bc"
  deps = [
    "//src/devices/bind/fuchsia.amlogic.platform",
