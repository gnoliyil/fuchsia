composite nrf52811_radio;

using fuchsia.amlogic.platform.s905d3;
using fuchsia.google.platform;
using fuchsia.hardware.gpio;
using fuchsia.nordic.platform;
using fuchsia.platform;
using fuchsia.spi;

primary node "spi" {
  fuchsia.BIND_PROTOCOL == fuchsia.spi.BIND_PROTOCOL.DEVICE;
  fuchsia.BIND_PLATFORM_DEV_VID == fuchsia.nordic.platform.BIND_PLATFORM_DEV_VID.NORDIC;
  fuchsia.BIND_PLATFORM_DEV_PID == fuchsia.nordic.platform.BIND_PLATFORM_DEV_PID.NRF52811;
  fuchsia.BIND_PLATFORM_DEV_DID == fuchsia.nordic.platform.BIND_PLATFORM_DEV_DID.THREAD;
}

node "gpio-int" {
  fuchsia.BIND_PROTOCOL == fuchsia.hardware.gpio.BIND_PROTOCOL.DEVICE;
  fuchsia.BIND_GPIO_PIN == fuchsia.amlogic.platform.s905d3.GPIOC_PIN_ID.PIN_5; // TH_SOC_INT
}

node "gpio-reset" {
  fuchsia.BIND_PROTOCOL == fuchsia.hardware.gpio.BIND_PROTOCOL.DEVICE;
  fuchsia.BIND_GPIO_PIN == fuchsia.amlogic.platform.s905d3.GPIOA_PIN_ID.PIN_13; // SOC_TH_RST_L
}

node "gpio-bootloader" {
  fuchsia.BIND_PROTOCOL == fuchsia.hardware.gpio.BIND_PROTOCOL.DEVICE;
  fuchsia.BIND_GPIO_PIN == fuchsia.amlogic.platform.s905d3.GPIOZ_PIN_ID.PIN_1; // SOC_TH_BOOT_MODE_L
}
