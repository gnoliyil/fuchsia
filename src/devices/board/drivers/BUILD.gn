  testonly = true
  deps = [
    "as370:tests",
    "astro:tests",
    "imx8mmevk:tests",
    "machina:tests",
    "nelson:tests",
    "pinecrest:tests",
    "qemu-arm64:tests",
    "qemu-riscv64:tests",
    "sherlock:tests",
    "vim3:tests",
  ]

  if (target_cpu == "x64") {
    deps += [ "x86:tests" ]
  }
}
