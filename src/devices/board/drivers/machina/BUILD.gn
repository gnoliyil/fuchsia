import("//build/bind/bind.gni")
import("//build/drivers.gni")

driver_bind_rules("machina_board_bind") {
  rules = "machina_board.bind"
  header_output = "machina_board_bind.h"
  tests = "bind_tests.json"
  deps = [
    "//src/devices/bind/fuchsia.google.platform",
    "//src/devices/bind/fuchsia.hardware.platform.bus",
  ]
}

group("tests") {
  testonly = true
  deps = [ ":machina_board_bind_test" ]
}

fuchsia_driver("machina-driver") {
  output_name = "machina"
  configs += [
    "//build/config:all_source",
    "//build/config/fuchsia:enable_zircon_asserts",
  ]
  sources = [
    "machina-sysmem.cc",
    "machina.cc",
  ]
  deps = [
    ":machina_board_bind",
    "//sdk/banjo/fuchsia.hardware.platform.device:fuchsia.hardware.platform.device_banjo_cpp",
    "//sdk/banjo/fuchsia.sysmem:fuchsia.sysmem_banjo_c",
    "//sdk/fidl/fuchsia.hardware.platform.bus:fuchsia.hardware.platform.bus_cpp_driver",
    "//src/devices/lib/driver",
    "//src/devices/lib/driver:driver_runtime",
    "//src/lib/ddk",
  ]
}

fuchsia_driver_component("machina") {
  component_name = "machina"
  deps = [ ":machina-driver" ]
  info = "machina-info.json"
  manifest = "meta/machina.cml"
}
