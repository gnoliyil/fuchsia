composite brownout_protection;

using fuchsia.codec;
using fuchsia.ti.platform;
using fuchsia.amlogic.platform.s905d3;
using fuchsia.hardware.gpio;
using fuchsia.hardware.power.sensor;

primary node "codec" {
  fuchsia.BIND_FIDL_PROTOCOL == fuchsia.codec.BIND_FIDL_PROTOCOL.SERVICE;
}

node "power-sensor" {
  fuchsia.BIND_FIDL_PROTOCOL == fuchsia.hardware.power.sensor.BIND_FIDL_PROTOCOL.DEVICE;
  fuchsia.BIND_POWER_SENSOR_DOMAIN == fuchsia.amlogic.platform.s905d3.BIND_POWER_SENSOR_DOMAIN.AUDIO;
}

node "alert-gpio" {
  fuchsia.BIND_PROTOCOL == fuchsia.hardware.gpio.BIND_PROTOCOL.DEVICE;
  fuchsia.hardware.gpio.FUNCTION == fuchsia.hardware.gpio.FUNCTION.GPIO_ALERT_PWR_L;
}
