import("//build/bind/bind.gni")
import("//build/components.gni")
import("//build/drivers.gni")
import("//build/test.gni")

driver_bind_rules("tpm_bind") {
  rules = "tpm.bind"
  header_output = "tpm_bind.h"
  tests = "bind_tests.json"
  deps = [ "//src/devices/bind/fuchsia.tpm" ]
}

common_deps = [
  ":tpm_bind",
  "//sdk/banjo/fuchsia.hardware.tpmimpl:fuchsia.hardware.tpmimpl_banjo_cpp",
  "//sdk/fidl/fuchsia.hardware.tpmimpl:fuchsia.hardware.tpmimpl_cpp_wire",
  "//sdk/fidl/fuchsia.tpm:fuchsia.tpm_cpp_wire",
  "//src/devices/lib/driver",
  "//src/lib/ddktl",
  "//zircon/system/ulib/async-loop:async-loop-cpp",
  "//zircon/system/ulib/hwreg",
  "//zircon/system/ulib/inspect",
  "//zircon/system/ulib/zx",
]

fuchsia_driver("fuchsia_driver") {
  output_name = "tpm-driver"
  sources = [ "tpm.cc" ]
  deps = common_deps

  # TODO(https://fxbug.dev/58162): delete the below and fix compiler warnings
  configs += [ "//build/config:Wno-conversion" ]
}

fuchsia_driver_component("tpm-driver") {
  info = "tpm-driver-info.json"
  deps = [ ":fuchsia_driver" ]
  manifest = "meta/tpm-driver.cml"
}

fuchsia_driver_package("tpm-pkg") {
  package_name = "tpm"
  driver_components = [ ":tpm-driver" ]
}

test("tpm-driver-test-bin") {
  output_name = "tpm-driver-test"
  sources = [
    "tpm-test.cc",
    "tpm.cc",
  ]
  deps = common_deps + [
           "//src/devices/testing/mock-ddk",
           "//zircon/system/ulib/zxtest",
         ]

  # TODO(https://fxbug.dev/58162): delete the below and fix compiler warnings
  configs += [ "//build/config:Wno-conversion" ]
}

fuchsia_unittest_package("tpm-driver-test") {
  deps = [ ":tpm-driver-test-bin" ]
}

group("tpm") {
  deps = [ ":tpm-pkg" ]
}

group("tests") {
  testonly = true
  deps = [
    ":tpm-driver-test",
    ":tpm_bind_test",
  ]
}
