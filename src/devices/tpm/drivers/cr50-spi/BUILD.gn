import("//build/bind/bind.gni")
import("//build/components.gni")
import("//build/drivers.gni")
import("//build/test.gni")

driver_bind_rules("cr50-spi_bind") {
  rules = "cr50-spi.bind"
  tests = "bind_tests.json"
  deps = [ "//src/devices/bind/fuchsia.acpi" ]
}

common_deps = [
  ":cr50-spi_bind",
  "//sdk/banjo/fuchsia.hardware.tpmimpl:fuchsia.hardware.tpmimpl_banjo_cpp",
  "//sdk/fidl/fuchsia.hardware.spi:fuchsia.hardware.spi_cpp_wire",
  "//sdk/fidl/fuchsia.hardware.tpmimpl:fuchsia.hardware.tpmimpl_cpp_wire",
  "//src/devices/lib/acpi",
  "//src/devices/lib/driver",
  "//src/lib/ddktl",
  "//zircon/system/ulib/async:async-cpp",
  "//zircon/system/ulib/async-loop:async-loop-cpp",
  "//zircon/system/ulib/inspect",
  "//zircon/system/ulib/zx",
]

fuchsia_driver("fuchsia_driver") {
  output_name = "cr50-spi-driver"
  sources = [ "cr50-spi.cc" ]
  deps = common_deps

  # TODO(https://fxbug.dev/58162): delete the below and fix compiler warnings
  configs += [ "//build/config:Wno-conversion" ]
}

fuchsia_driver_component("cr50-spi-driver") {
  info = "cr50-spi-driver-info.json"
  deps = [ ":fuchsia_driver" ]
  manifest = "meta/cr50-spi.cml"
}

fuchsia_driver_package("cr50-spi-pkg") {
  package_name = "cr50-spi"
  driver_components = [ ":cr50-spi-driver" ]
}

test("cr50-spi-test-bin") {
  output_name = "cr50-spi-test"
  sources = [
    "cr50-spi-test.cc",
    "cr50-spi.cc",
  ]
  deps = common_deps + [
           "//sdk/lib/inspect/testing/cpp:zxtest",
           "//src/devices/lib/acpi/mock:mock-acpi",
           "//src/devices/testing/mock-ddk",
           "//zircon/system/ulib/zxtest",
         ]

  # TODO(https://fxbug.dev/58162): delete the below and fix compiler warnings
  configs += [ "//build/config:Wno-conversion" ]
}

fuchsia_unittest_package("cr50-spi-test") {
  deps = [ ":cr50-spi-test-bin" ]
}

group("cr50-spi") {
  deps = [ ":cr50-spi-pkg" ]
}

group("tests") {
  testonly = true
  deps = [
    ":cr50-spi-test",
    ":cr50-spi_bind_test",
  ]
}
