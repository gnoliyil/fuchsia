{
    include: [ "syslog/client.shard.cml" ],
    program: {
        runner: "elf",
        binary: "bin/radar_proxy",
    },
    capabilities: [
        {
            protocol: [ "fuchsia.hardware.radar.RadarBurstReaderProvider" ],
        },
    ],
    use: [
        {
            directory: "dev-radar",
            rights: [ "r*" ],
            path: "/dev/class/radar",
        },
    ],
    expose: [
        {
            protocol: "fuchsia.hardware.radar.RadarBurstReaderProvider",
            from: "self",
        },
    ],
    config: {
        proxy_radar_burst_reader: { type: "bool" },
    },
}
