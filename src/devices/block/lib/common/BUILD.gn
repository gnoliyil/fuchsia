import("//build/components.gni")
import("//build/test.gni")

library_headers("headers") {
  headers = [ "common.h" ]
  public_deps = [
    "//sdk/fidl/fuchsia.hardware.block.driver:fuchsia.hardware.block.driver_banjo_cpp",
    "//src/lib/ddk",
  ]
}

source_set("common") {
  public_deps = [ ":headers" ]
}

test("common-test") {
  sources = [ "common-test.cc" ]
  deps = [
    ":common",
    "//src/devices/testing/mock-ddk",  # For building zxlogf().
    "//zircon/system/ulib/zxtest",
  ]
}

fuchsia_unittest_package("block-common-test") {
  deps = [ ":common-test" ]
  test_specs = {
    log_settings = {
      max_severity = "ERROR"
    }
  }
}

group("tests") {
  testonly = true
  deps = [ ":block-common-test" ]
}
