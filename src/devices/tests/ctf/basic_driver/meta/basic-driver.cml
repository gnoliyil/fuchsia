{
    include: [
        "inspect/client.shard.cml",
        "syslog/client.shard.cml",
    ],
    program: {
        runner: "driver",
        binary: "driver/ctf_basic_driver.so",
        colocate: "false",
        default_dispatcher_opts: [ "allow_sync_calls" ],
        bind: "meta/bind/basic.bindbc",
    },
    capabilities: [
        { service: "fuchsia.basicdriver.ctftest.Service" },
    ],
    use: [
        { protocol: "fuchsia.basicdriver.ctftest.Waiter" },
    ],
    expose: [
        {
            service: "fuchsia.basicdriver.ctftest.Service",
            from: "self",
        },
    ],
}
