import("//build/bind/bind.gni")
import("//build/components.gni")
import("//build/drivers.gni")
import("//build/test.gni")

driver_bind_rules("bind") {
  rules = "root.bind"
  bind_output = "root.bindbc"
  deps = [ "//src/devices/bind/fuchsia.test" ]
}

fuchsia_driver("driver") {
  output_name = "compat-runtime-v1-root"
  sources = [ "root.cc" ]
  deps = [
    ":bind",
    "//sdk/fidl/fuchsia.driver.framework:fuchsia.driver.framework_cpp",
    "//sdk/lib/driver/component/cpp:cpp",
    "//sdk/lib/driver/runtime:driver_runtime_cpp",
    "//src/devices/lib/driver",
    "//src/devices/lib/driver:driver_runtime",
    "//src/devices/tests/v2/compat-runtime-v1:fuchsia.compat.runtime_cpp_driver",
    "//src/devices/tests/v2/compat-runtime-v1/bind:fuchsia.compat_cpp",
    "//src/lib/ddk",
    "//src/lib/ddktl",
    "//zircon/system/ulib/fbl",
    "//zircon/system/ulib/inspect",
    "//zircon/system/ulib/zx",
  ]
}

fuchsia_driver_component("component") {
  component_name = "root"
  deps = [ ":driver" ]
  info = "root-info.json"
  manifest = "meta/root.cml"
}
