library fuchsia.lifecycle.test;

@discoverable
closed protocol Device {
    strict Ping() -> ();

    strict GetString() -> (struct {
        response string:MAX;
    });

    /// Replies in prepare stop.
    strict Stop() -> ();
};

@transport("Banjo")
@banjo_layout("ddk-protocol")
closed protocol Parent {
    /// Get the test string from the parent device. This string should always
    /// read "hello world!"
    strict GetString() -> (struct {
        response string:MAX;
    });
};
