import("//build/fuzz.gni")

fuchsia_library_fuzzer("fx-log-fuzzer") {
  sources = [ "fuzz.cc" ]
  deps = [
    "//sdk/lib/syslog/cpp",
    "//sdk/lib/syslog/cpp:backend",
    "//zircon/system/ulib/syslog",
    "//zircon/system/ulib/zircon-internal",
  ]
}

fuchsia_fuzzer_component("fx-log-fuzzer-component") {
  manifest = "meta/fx-log-fuzzer.cml"
  deps = [ ":fx-log-fuzzer" ]
}

fuchsia_fuzzer_package("fx-log-fuzzers") {
  cpp_fuzzer_components = [ ":fx-log-fuzzer-component" ]
}

fuchsia_library_fuzzer("fx-log-static-fuzzer") {
  sources = [ "fuzz.cc" ]
  deps = [
    "//sdk/lib/syslog/cpp",
    "//sdk/lib/syslog/cpp:backend",
    "//zircon/system/ulib/syslog:syslog-static",
    "//zircon/system/ulib/zircon-internal",
  ]
}

fuchsia_fuzzer_component("fx-log-static-fuzzer-component") {
  manifest = "meta/fx-log-static-fuzzer.cml"
  deps = [ ":fx-log-static-fuzzer" ]
}

fuchsia_fuzzer_package("fx-log-static-fuzzers") {
  cpp_fuzzer_components = [ ":fx-log-static-fuzzer-component" ]
}

group("tests") {
  testonly = true
  deps = [
    ":fx-log-fuzzers",
    ":fx-log-static-fuzzers",
  ]
}
