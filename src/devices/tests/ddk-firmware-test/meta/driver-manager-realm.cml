// TODO(fxbug.dev/116950): Merge this into the driver-test-realm.cml
{
    include: [ "syslog/offer.shard.cml" ],
    children: [
        {
            name: "driver-manager",
            url: "#meta/driver_manager_test.cm",
        },
        {
            name: "driver-manager-support",
            url: "#meta/driver_manager_support.cm",
        },
        {
            name: "driver-index",
            url: "#meta/driver-index.cm",
        },
        {
            name: "devfs",
            url: "#meta/devfs.cm",
        },
    ],
    offer: [
        {
            protocol: [ "fuchsia.device.fs.lifecycle.Lifecycle" ],
            from: "#driver-manager",
            to: [ "#devfs" ],
        },
        {
            directory: "dev",
            from: "#driver-manager",
            to: "#devfs",
        },
        {
            protocol: [
                "fuchsia.logger.LogSink",
                "fuchsia.process.Launcher",
            ],
            from: "parent",
            to: "#driver-manager",
        },
        {
            protocol: [
                "fuchsia.boot.Arguments",
                "fuchsia.boot.Items",
                "fuchsia.kernel.RootJob",
                "fuchsia.power.manager.DriverManagerRegistration",
            ],
            from: "#driver-manager-support",
            to: "#driver-manager",
        },
        {
            protocol: [ "fuchsia.driver.index.DriverIndex" ],
            from: "#driver-index",
            to: "#driver-manager",
        },
        {
            protocol: [ "fuchsia.boot.Arguments" ],
            from: "#driver-manager-support",
            to: "#driver-index",
        },
        {
            protocol: [ "fuchsia.logger.LogSink" ],
            from: "parent",
            to: "#driver-index",
        },
        {
            directory: "pkgfs-packages",
            from: "parent",
            to: [ "#driver-index" ],
        },
        {
            directory: "pkgfs",
            from: "parent",
            to: [ "#driver-manager" ],
        },
        {
            directory: "system",
            from: "parent",
            to: [ "#driver-manager" ],
        },
        {
            directory: "boot",
            from: "#driver-manager-support",
            to: [ "#driver-manager" ],
        },
        {
            directory: "boot",
            from: "parent",
            to: [ "#driver-index" ],
        },
    ],
    expose: [
        {
            directory: "dev-topological",
            from: "#devfs",
        },
        {
            protocol: [ "fuchsia.device.manager.Administrator" ],
            from: "#driver-manager",
        },
        {
            protocol: [ "fuchsia.driver.test.Realm" ],
            from: "#driver-manager-support",
        },
    ],
}
