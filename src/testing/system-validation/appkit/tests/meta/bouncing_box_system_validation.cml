{
    include: [
        "//src/testing/system-validation/meta/system_validation_test_facet.cml",
        "//src/testing/system-validation/meta/use_custom_artifact.cml",
        "sys/testing/elf_test_runner.shard.cml",
        "syslog/client.shard.cml",
    ],
    program: {
        binary: "bin/appkit_app_instrumentor",
    },
    children: [
        {
            name: "sample-app",
            url: "bouncing_box#meta/bouncing_box.cm",
            startup: "eager",
        },
        {
            name: "tiles-session",
            url: "tiles-session#meta/tiles-session.cm",
        },
    ],
    use: [
        {
            protocol: [
                "fuchsia.tracing.controller.Controller",
                "fuchsia.ui.composition.Screenshot",
            ],
            from: "parent",
        },
        {
            event_stream: [
                "started",
                "stopped",
            ],
            from: "parent",
        },
    ],
    offer: [
        {
            protocol: [
                "fuchsia.logger.LogSink",
                "fuchsia.sysmem.Allocator",
                "fuchsia.ui.composition.Allocator",
                "fuchsia.ui.composition.Flatland",
                "fuchsia.ui.input3.Keyboard",
            ],
            from: "parent",
            to: [ "#sample-app" ],
        },
        {
            protocol: [
                "fuchsia.session.scene.Manager",
                "fuchsia.tracing.provider.Registry",
                "fuchsia.ui.composition.Flatland",
                "fuchsia.ui.scenic.Scenic",
            ],
            from: "parent",
            to: [ "#tiles-session" ],
        },
        {
            protocol: [ "fuchsia.element.GraphicalPresenter" ],
            from: "#tiles-session",
            to: [ "#sample-app" ],
        },
    ],
}
