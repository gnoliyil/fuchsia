// Add metrics-logger to core
{
    children: [
        {
            name: "metrics-logger",
            url: "fuchsia-pkg://fuchsia.com/metrics-logger#meta/metrics-logger.cm",
            environment: "#core-env",
        },
    ],
    offer: [
        {
            directory: "dev-class",
            from: "parent",
            as: "dev-class-network",
            to: [ "#metrics-logger" ],
            subdir: "network",
        },
        {
            directory: "dev-class",
            from: "parent",
            as: "dev-temperature",
            to: "#metrics-logger",
            subdir: "temperature",
        },
        {
            directory: "dev-class",
            from: "parent",
            as: "dev-thermal",
            to: "#metrics-logger",
            subdir: "thermal",
        },
        {
            directory: "dev-class",
            from: "parent",
            as: "dev-power-sensor",
            to: "#metrics-logger",
            subdir: "power-sensor",
        },
        {
            directory: "dev-class",
            from: "parent",
            as: "dev-gpu",
            to: [ "#metrics-logger" ],
            subdir: "gpu",
        },
        {
            directory: "config-data",
            from: "parent",
            to: "#metrics-logger",
            subdir: "metrics-logger",
        },
        {
            protocol: [
                "fuchsia.boot.Items",
                "fuchsia.kernel.Stats",
                "fuchsia.logger.LogSink",
            ],
            from: "parent",
            to: "#metrics-logger",
        },
    ],
}
