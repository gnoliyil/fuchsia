import("//build/python/python_host_test.gni")

if (is_host) {
  python_host_test("session_ffx_test") {
    main_source = "session_test.py"
    libraries = [ "//src/testing/end_to_end/honeydew" ]
    main_callable = "unittest.main"
    extra_args = [ "-v" ]
  }
}

group("tests") {
  testonly = true
  public_deps = [ ":session_ffx_test($host_toolchain)" ]
}
