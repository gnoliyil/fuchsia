import("//build/python/python_host_test.gni")

if (is_host) {
  python_host_test("init_test") {
    main_source = "init_test.py"
    libraries = [
      "//src/testing/end_to_end/honeydew",
      "//third_party/parameterized",
    ]
    main_callable = "unittest.main"
    extra_args = [ "-v" ]
  }

  python_host_test("custom_types_test") {
    main_source = "custom_types_test.py"
    libraries = [
      "//src/testing/end_to_end/honeydew",
      "//third_party/parameterized",
    ]
    main_callable = "unittest.main"
    extra_args = [ "-v" ]
  }
}

group("tests") {
  testonly = true
  public_deps = [
    ":custom_types_test($host_toolchain)",
    ":init_test($host_toolchain)",
    "affordances_tests:tests",
    "device_classes_tests:tests",
    "transports_tests:tests",
    "utils_tests:tests",
  ]
}
