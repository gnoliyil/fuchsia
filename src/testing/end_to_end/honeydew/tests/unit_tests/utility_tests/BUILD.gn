import("//build/python/python_host_test.gni")

if (is_host) {
  python_host_test("ffx_cli_test") {
    main_source = "ffx_cli_test.py"
    libraries = [
      "//src/testing/end_to_end/honeydew",
      "//third_party/parameterized",
    ]
    main_callable = "unittest.main"
    extra_args = [ "-v" ]
  }

  python_host_test("host_utils_test") {
    main_source = "host_utils_test.py"
    libraries = [
      "//src/testing/end_to_end/honeydew",
      "//third_party/parameterized",
    ]
    main_callable = "unittest.main"
    extra_args = [ "-v" ]
  }

  python_host_test("http_utils_test") {
    main_source = "http_utils_test.py"
    libraries = [
      "//src/testing/end_to_end/honeydew",
      "//third_party/parameterized",
    ]
    main_callable = "unittest.main"
    extra_args = [ "-v" ]
  }

  group("tests") {
    testonly = true
    public_deps = [
      ":ffx_cli_test($host_toolchain)",
      ":host_utils_test($host_toolchain)",
    ]
  }
}
