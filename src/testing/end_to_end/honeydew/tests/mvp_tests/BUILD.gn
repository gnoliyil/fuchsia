group("tests") {
  testonly = true
  public_deps = [ "test_soft_reboot:soft_reboot_test($host_toolchain)" ]
}

# Tests that we want to run in an FYI builder.
# We do not want failures from these tests to break the tree.
group("fyi") {
  testonly = true
  deps = [ "test_soft_reboot:soft_reboot_test($host_toolchain)" ]
}
