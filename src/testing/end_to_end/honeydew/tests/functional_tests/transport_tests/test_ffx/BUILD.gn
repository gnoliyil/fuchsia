import("//build/python/python_mobly_test.gni")
import("//build/testing/environments.gni")

if (is_host) {
  python_mobly_test("ffx_test_fc") {
    main_source = "test_ffx.py"
    libraries = [
      "//src/testing/end_to_end/honeydew",
      "//src/testing/end_to_end/mobly_base_tests:fuchsia_base_test",
    ]
    test_data_deps = [ "//src/developer/ffx/tools/power:ffx_power_test_data" ]
    transport = "fuchsia-controller"
    params_source = "params.yaml"
    environments = [ emu_env ]
  }

  python_mobly_test("ffx_wait_for_rcs_disconnection_test_fc") {
    main_source = "test_ffx_wait_for_rcs_disconnection.py"
    libraries = [
      "//src/testing/end_to_end/honeydew",
      "//src/testing/end_to_end/mobly_base_tests:fuchsia_base_test",
    ]
    transport = "fuchsia-controller"
    environments = [ emu_env ]
  }

  # Group containing all of the FFX transport functional test cases and their dependencies.
  group("tests") {
    testonly = true
    public_deps = [
      ":ffx_test_fc($host_toolchain)",
      ":ffx_wait_for_rcs_disconnection_test_fc($host_toolchain)",
    ]
  }
}

group("packages") {
  testonly = true
  public_deps = [ "//examples/hello_world/rust:hermetic_tests" ]
}

group("test_ffx") {
  testonly = true
  public_deps = [
    ":packages",
    ":tests($host_toolchain)",
  ]
}
