if (is_host) {
  group("emulator_tests") {
    testonly = true
    public_deps = [
      "test_component:component_test($host_toolchain)",
      "test_tracing:tracing_test($host_toolchain)",
    ]
  }

  group("nuc_tests") {
    testonly = true
    public_deps = [ "test_bluetooth:bluetooth_gap_test($host_toolchain)" ]
  }

  group("tests") {
    testonly = true
    public_deps = [
      ":emulator_tests",
      ":nuc_tests",
    ]
  }
}
