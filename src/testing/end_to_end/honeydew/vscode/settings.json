{
    "python.linting.lintOnSave": true,
    "python.linting.pylintEnabled": true,
    "python.linting.pylintPath": "${env:FUCHSIA_DIR}/.venvs/fuchsia_python_venv/bin/pylint",
    "python.linting.pylintArgs": [
        "--rcfile=${env:FUCHSIA_DIR}/src/testing/end_to_end/honeydew/linter/pylintrc"
    ],
    "pylint.args": [
        "--rcfile=${env:FUCHSIA_DIR}/src/testing/end_to_end/honeydew/linter/pylintrc"
    ],
    "python.linting.mypyEnabled": true,
    "python.linting.mypyPath": "${env:FUCHSIA_DIR}/.venvs/fuchsia_python_venv/bin/mypy",
    "python.linting.mypyArgs": [
        "--config-file=${env:FUCHSIA_DIR}/src/testing/end_to_end/honeydew/pyproject.toml"
    ],
    "mypy-type-checker.args": [
        "--config-file=${env:FUCHSIA_DIR}/src/testing/end_to_end/honeydew/pyproject.toml"
    ],
    "python.formatting.provider": "yapf",
    "editor.rulers": [
        80
    ],
    "editor.formatOnSaveMode": "file",
    "editor.formatOnSave": true,
    "editor.formatOnPaste": false,
    "editor.detectIndentation": false,
    "editor.tabSize": 4,
    "editor.formatOnType": true,
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    "update.mode": "none",
    "python.autoComplete.extraPaths": [
        "${env:FUCHSIA_DIR}/src/testing/end_to_end",
        "${env:FUCHSIA_DIR}/fuchsia/third_party/mobly/",
        "${env:FUCHSIA_DIR}/fuchsia/third_party/parameterized/"
    ],
    "python.analysis.extraPaths": [
        "${env:FUCHSIA_DIR}/fuchsia/src/testing/end_to_end",
        "${env:FUCHSIA_DIR}/fuchsia/third_party/mobly/",
        "${env:FUCHSIA_DIR}/fuchsia/third_party/parameterized/"
    ],
    "python.analysis.indexing": true,
    "python.analysis.inlayHints.functionReturnTypes": true,
    "python.analysis.inlayHints.variableTypes": true,
    "python.analysis.typeCheckingMode": "basic",
    "python.analysis.autoImportCompletions": true,
    "python.analysis.completeFunctionParens": true
}
