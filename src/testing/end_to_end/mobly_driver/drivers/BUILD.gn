import("//build/python/python_host_test.gni")
import("//build/python/python_library.gni")

if (is_host) {
  python_library("base_mobly_driver") {
    sources = [ "base_mobly_driver.py" ]
  }

  python_library("common") {
    sources = [ "common.py" ]
    library_deps = [ "//third_party/pyyaml:yaml" ]
  }

  python_host_test("common_test") {
    main_source = "common_test.py"
    sources = [ "common.py" ]
    libraries = [ ":common" ]
  }

  python_library("local_driver") {
    sources = [ "local_driver.py" ]
    library_deps = [
      ":base_mobly_driver",
      ":common",
      "//src/testing/end_to_end/mobly_driver:api_mobly",
      "//third_party/pyyaml:yaml",
    ]
  }

  python_host_test("local_driver_test") {
    main_source = "local_driver_test.py"
    sources = [
      "../api_mobly.py",
      "base_mobly_driver.py",
      "common.py",
      "local_driver.py",
    ]
    libraries = [ ":local_driver" ]
  }

  python_library("infra_driver") {
    sources = [ "infra_driver.py" ]
    library_deps = [
      ":base_mobly_driver",
      ":common",
      "//src/testing/end_to_end/mobly_driver:api_infra",
      "//src/testing/end_to_end/mobly_driver:api_mobly",
      "//third_party/pyyaml:yaml",
    ]
  }

  python_host_test("infra_driver_test") {
    main_source = "infra_driver_test.py"
    sources = [
      "../api_infra.py",
      "../api_mobly.py",
      "base_mobly_driver.py",
      "common.py",
      "infra_driver.py",
    ]
    libraries = [ ":infra_driver" ]
  }
}

group("tests") {
  testonly = true
  public_deps = [
    ":common_test($host_toolchain)",
    ":infra_driver_test($host_toolchain)",
    ":local_driver_test($host_toolchain)",
  ]
}
