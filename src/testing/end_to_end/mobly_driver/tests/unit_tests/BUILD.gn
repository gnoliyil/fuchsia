import("//build/python/python_host_test.gni")

if (is_host) {
  python_host_test("api_mobly_test") {
    main_source = "api_mobly_test.py"
    sources = [
      "//src/testing/end_to_end/mobly_driver/api_infra.py",
      "//src/testing/end_to_end/mobly_driver/api_mobly.py",
    ]
    libraries = [
      "//src/testing/end_to_end/mobly_driver:api_mobly",
      "//third_party/parameterized",
    ]
  }

  python_host_test("mobly_driver_lib_test") {
    main_source = "mobly_driver_lib_test.py"
    sources = [
      "//src/testing/end_to_end/mobly_driver/drivers/base_mobly_driver.py",
      "//src/testing/end_to_end/mobly_driver/mobly_driver_lib.py",
    ]
    libraries = [
      "//src/testing/end_to_end/mobly_driver:mobly_driver_lib",
      "//third_party/parameterized",
    ]
  }

  python_host_test("driver_factory_test") {
    main_source = "driver_factory_test.py"
    sources = [
      "//src/testing/end_to_end/mobly_driver/api_infra.py",
      "//src/testing/end_to_end/mobly_driver/driver_factory.py",
      "//src/testing/end_to_end/mobly_driver/drivers/base_mobly_driver.py",
      "//src/testing/end_to_end/mobly_driver/drivers/common.py",
      "//src/testing/end_to_end/mobly_driver/drivers/infra_driver.py",
      "//src/testing/end_to_end/mobly_driver/drivers/local_driver.py",
    ]
    libraries = [
      "//src/testing/end_to_end/mobly_driver:driver_factory",
      "//third_party/parameterized",
    ]
  }
}

group("tests") {
  testonly = true
  public_deps = [
    ":api_mobly_test($host_toolchain)",
    ":driver_factory_test($host_toolchain)",
    ":mobly_driver_lib_test($host_toolchain)",
    "drivers:tests",
  ]
}
