import("//build/python/python_host_test.gni")

if (is_host) {
  python_host_test("common_test") {
    main_source = "common_test.py"
    sources = [ "//src/testing/end_to_end/mobly_driver/drivers/common.py" ]
    libraries = [ "//src/testing/end_to_end/mobly_driver/drivers:common" ]
  }

  python_host_test("local_driver_test") {
    main_source = "local_driver_test.py"
    sources = [
      "//src/testing/end_to_end/mobly_driver/api_infra.py",
      "//src/testing/end_to_end/mobly_driver/api_mobly.py",
      "//src/testing/end_to_end/mobly_driver/drivers/base_mobly_driver.py",
      "//src/testing/end_to_end/mobly_driver/drivers/common.py",
      "//src/testing/end_to_end/mobly_driver/drivers/local_driver.py",
    ]
    libraries = [
      "//src/testing/end_to_end/mobly_driver/drivers:local_driver",
      "//third_party/parameterized",
    ]
  }

  python_host_test("infra_driver_test") {
    main_source = "infra_driver_test.py"
    sources = [
      "//src/testing/end_to_end/mobly_driver/api_infra.py",
      "//src/testing/end_to_end/mobly_driver/api_mobly.py",
      "//src/testing/end_to_end/mobly_driver/drivers/base_mobly_driver.py",
      "//src/testing/end_to_end/mobly_driver/drivers/common.py",
      "//src/testing/end_to_end/mobly_driver/drivers/infra_driver.py",
    ]
    libraries = [ "//src/testing/end_to_end/mobly_driver/drivers:infra_driver" ]
  }
}

group("tests") {
  testonly = true
  public_deps = [
    ":common_test($host_toolchain)",
    ":infra_driver_test($host_toolchain)",
    ":local_driver_test($host_toolchain)",
  ]
}
