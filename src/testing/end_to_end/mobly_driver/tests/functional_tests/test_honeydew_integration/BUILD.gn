import("//build/python/python_library.gni")
import("//build/python/python_mobly_test.gni")
import("//build/testing/host_test_data.gni")

if (is_host) {
  python_mobly_test("test_honeydew_integration") {
    main_source = "test_honeydew_integration.py"

    libraries = [ "//src/testing/end_to_end/honeydew" ]

    local_config_source = "local_mobly_config.yaml"

    # Used for infra Swarming bot allocation.
    environments = [
      {
        dimensions = {
          device_type = "AEMU"
        }
      },
    ]
  }
}

# Tests that we want to run in an FYI builder.
# We do not want failures from these tests to break the tree.
group("fyi") {
  testonly = true
  deps = [ ":test_honeydew_integration($host_toolchain)" ]
}
