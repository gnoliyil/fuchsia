{
    include: [ "//src/sys/test_runners/inspect/default.shard.cml" ],
    program: {
        accessor: "ALL",
        timeout_seconds: "60",
        cases: [
            // Verify the filesystem type (which is hard-coded and stable)
            "bootstrap/fshost/fxfs:root/fxfs/fs.info:type WHERE [a] a == 1936095334",

            // Verify total bytes of filesystem is nonzero
            "bootstrap/fshost/fxfs:root/fxfs/fs.usage:total_bytes WHERE [a] a > 0",
        ],
    },
}
