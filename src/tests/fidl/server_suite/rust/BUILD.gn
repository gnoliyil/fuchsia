import("//build/components.gni")
import("//build/rust/rustc_binary.gni")

rustc_binary("bin") {
  name = "server_suite_under_test_rust"
  sources = [ "src/main.rs" ]
  edition = "2021"
  deps = [
    "//src/lib/fidl/rust/fidl",
    "//src/lib/fuchsia",
    "//src/lib/fuchsia-component",
    "//src/tests/fidl/server_suite/fidl:fidl.serversuite_rust",
    "//third_party/rust_crates:futures",
    "//zircon/vdso/zx:zx_rust",
  ]
}

fuchsia_test_component("server") {
  manifest = "meta/server.cml"
  deps = [ ":bin" ]
}

fuchsia_package("rust") {
  testonly = true
  package_name = "fidl_server_suite_rust_server"
  deps = [ ":server" ]
}
