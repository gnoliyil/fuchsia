library fidl.serversuite;

using zx;

// The Runner coordinates test activity and is shared by multiple tests.
@discoverable
closed protocol Runner {
    // Check if a test with a given name is enabled before running it.
    strict IsTestEnabled(struct {
        test Test;
    }) -> (struct {
        is_enabled bool;
    });

    // Check if the runner supports determining fine-grained teardown reasons.
    // If false, then the server under test should still notify on teardown,
    // but it should only send back [`TeardownReason.OTHER`].
    strict IsTeardownReasonSupported() -> (struct {
        is_supported bool;
    });

    // Create a Target to run tests against.
    strict Start(resource struct {
        // Target server end to bind for this test.
        target AnyTarget;
    }) -> ();

    // A two-way function to test that the Runner is still responding.
    strict CheckAlive() -> ();
};

// Type which can hold the server end of any target type. The test case will
// create the channel and pass it to the runner in Start.
type AnyTarget = strict resource union {
    1: closed_target @generated_name("ClosedTargetServerPair") resource struct {
        controller server_end:ClosedTargetController;
        sut server_end:ClosedTarget;
    };
    2: ajar_target @generated_name("AjarTargetServerPair") resource struct {
        controller server_end:AjarTargetController;
        sut server_end:AjarTarget;
    };
    3: open_target @generated_name("OpenTargetServerPair") resource struct {
        controller server_end:OpenTargetController;
        sut server_end:OpenTarget;
    };
};

// Empty type used for valid but empty union variants.
type Empty = struct {};

// Error classification for errors from sending an event. This is used for the
// error value from all methods on the `<Name>TargetController` protocols which
// request that the system under test send an event.
type SendEventError = strict enum : int32 {
    // Any error which isn't otherwise classified.
    OTHER_ERROR = 1;
};

// Identifies which type of unknown method was received in the unknown
// interaction handler.
type UnknownMethodType = strict enum {
    // Unknown method was a one-way method, like "SomeMethod(...);"
    ONE_WAY = 1;
    // Unknown method was a two-way method, like "SomeMethod(...) -> (...);"
    TWO_WAY = 2;
};

type UnknownMethodInfo = struct {
    // Ordinal that was received in the interaction handler.
    ordinal uint64;
    // Whether the unknown method is one-way or two-way.
    unknown_method_type UnknownMethodType;
};

// TODO(fxbug.dev/102339): These could probably be combined with the GIDL error codes for common
// cases in some way.
type EncodingFailureKind = strict enum {
    // Remove this placeholder when adding members here.
    PLACEHOLDER = 1;
};

type EncodingFailureInfo = struct {
    kind EncodingFailureKind;
};

// Under particular test cases, the test harness may expect that the server
// bindings experience an error that requires it to teardown the connection.
// This enum provides classifications for the possible kinds of FIDL errors at
// the level of granularity needed to make assertions in tests. It does not
// taxonomize all the possible errors that might be returned in bindings.
//
// When handling connection teardown, the target in that language should
// classify the reported error into one of these.
type TeardownReason = strict enum {
    // All other reasons. Many reasons are irrelevant in the situations
    // being tested here, so all those errors can broadly be globbed together
    // here.
    OTHER = 1;
    // Any error encountered during decoding. In particular, transactional
    // message headers may also fail to decode.
    DECODING_ERROR = 2;
    // Errors due to the channel being closed by the peer.
    CHANNEL_PEER_CLOSED = 3;
    // The server received an unknown strict method or unknown flexible method
    // on a protocol that doesn't allow it.
    UNEXPECTED_MESSAGE = 4;
};

// Protocol which should be composed by every target controller.
closed protocol TeardownReasonReporterMixin {
    // Report that the server bindings will teardown the [`AnyTarget`] `sut`
    // connection because of the attached reason.
    //
    // The server bindings under test should send at most one reason
    // per [`Runner.Start`] call. It should not check the result of this
    // call, because the test harness may have already broken away if
    // the harness is not interested. TODO(fxbug.dev/113160): servers can
    // start checking the result if one-way calls do not report peer-closed
    // errors.
    strict -> WillTeardown(struct {
        reason TeardownReason;
    });
};

// Protocol which should be composed by all controllers for protocols which
// support unknown interactions.
closed protocol UnknownInteractionReporterMixin {
    // Report that the unknown interaction handler ran.
    strict -> ReceivedUnknownMethod(UnknownMethodInfo);
};

// Protocol which can be composed by a controller that needs to report encoding
// errors from sending method replies.
closed protocol ReplyEncodingReporterMixin {
    // Report that an encoding failure occurred when sending a reply.
    strict -> ReplyEncodingFailed(EncodingFailureInfo);
};

closed protocol ClosedTargetController {
    compose TeardownReasonReporterMixin;

    // Report receiving the OneWayNoPayload method call.
    strict -> ReceivedOneWayNoPayload();

    strict CloseWithEpitaph(struct {
        epitaph_status int32;
    });
};

// The Target is the server under test. This target is used for tests which use
// a closed protocol, or which don't care whether the protocol is open or
// closed.
closed protocol ClosedTarget {
    strict OneWayNoPayload();

    strict TwoWayNoPayload() -> ();

    strict TwoWayStructPayload(struct {
        v int8;
    }) -> (struct {
        v int8;
    });

    strict TwoWayTablePayload(table {
        1: v int8;
    }) -> (table {
        1: v int8;
    });

    strict TwoWayUnionPayload(union {
        1: v int8;
    }) -> (union {
        1: v int8;
    });

    strict TwoWayResult(strict union {
        1: payload string:MAX;
        2: error uint32;
    }) -> (struct {
        payload string:MAX;
    }) error uint32;

    strict GetHandleRights(resource struct {
        // Plain handle, there should be no rights or type checking.
        handle zx.Handle;
    }) -> (struct {
            // Rights should be obtained by calling zx_object_get_info on |handle|
            // with topic ZX_INFO_HANDLE_BASIC.
        rights zx.Rights;
    });

    strict GetSignalableEventRights(resource struct {
        handle zx.Handle:<EVENT, zx.Rights.SIGNAL>;
    }) -> (struct {
        // Rights should be obtained by calling zx_object_get_info on |handle|
        // with topic ZX_INFO_HANDLE_BASIC.
        rights zx.Rights;
    });

    strict EchoAsTransferableSignalableEvent(resource struct {
        handle zx.Handle;
    }) -> (resource struct {
        // The response handle should be the same as the request handle.
        handle zx.Handle:<EVENT, zx.Rights.TRANSFER | zx.Rights.SIGNAL>;
    });

    strict ByteVectorSize(struct {
        vec vector<uint8>;
    }) -> (struct {
        n uint32;
    });

    strict HandleVectorSize(resource struct {
        vec vector<zx.Handle:EVENT>;
    }) -> (struct {
        n uint32;
    });

    strict CreateNByteVector(struct {
        n uint32;
    }) -> (struct {
        vec vector<uint8>;
    });

    strict CreateNHandleVector(resource struct {
        n uint32;
    }) -> (resource struct {
        vec vector<zx.Handle:EVENT>;
    });
};

closed protocol AjarTargetController {
    compose TeardownReasonReporterMixin;
    compose UnknownInteractionReporterMixin;
};

// This is a version of Target only used for tests which care about having an
// ajar protocol. This is mostly used for Unknown Interaction testing.
ajar protocol AjarTarget {};

// Protocol used to report one-way method calls received by the OpenTarget and
// to command the OpenTarget to send events.
closed protocol OpenTargetController {
    compose TeardownReasonReporterMixin;
    compose UnknownInteractionReporterMixin;

    // Ask the server to send StrictEvent.
    strict SendStrictEvent() -> () error SendEventError;
    // Ask the server to send FlexibleEvent.
    strict SendFlexibleEvent() -> () error SendEventError;

    // Report receiving the StrictOneWay method call.
    strict -> ReceivedStrictOneWay();
    // Report receiving the FlexibleOneWay method call.
    strict -> ReceivedFlexibleOneWay();
};

// This is a version of Target only used for tests which care about having an
// open protocol. This is mostly used for Unknown Interaction testing.
open protocol OpenTarget {
    strict -> StrictEvent();
    flexible -> FlexibleEvent();

    strict StrictOneWay();
    flexible FlexibleOneWay();

    strict StrictTwoWay() -> ();
    strict StrictTwoWayFields(struct {
        reply_with int32;
    }) -> (struct {
        some_field int32;
    });
    strict StrictTwoWayErr(strict union {
        1: reply_success Empty;
        2: reply_error int32;
    }) -> () error int32;
    strict StrictTwoWayFieldsErr(strict union {
        1: reply_success int32;
        2: reply_error int32;
    }) -> (struct {
        some_field int32;
    }) error int32;

    flexible FlexibleTwoWay() -> ();
    flexible FlexibleTwoWayFields(struct {
        reply_with int32;
    }) -> (struct {
        some_field int32;
    });
    flexible FlexibleTwoWayErr(strict union {
        1: reply_success Empty;
        2: reply_error int32;
    }) -> () error int32;
    flexible FlexibleTwoWayFieldsErr(strict union {
        1: reply_success int32;
        2: reply_error int32;
    }) -> (struct {
        some_field int32;
    }) error int32;
};

