import("//build/components.gni")
import("//build/rust/rustc_binary.gni")

rustc_binary("bin") {
  name = "client_suite_under_test_rust_sync"
  sources = [ "src/main.rs" ]
  edition = "2021"
  deps = [
    "//src/lib/fidl/rust/fidl",
    "//src/lib/fuchsia",
    "//src/lib/fuchsia-component",
    "//src/lib/zircon/rust:fuchsia-zircon",
    "//src/tests/fidl/client_suite/fidl:fidl.clientsuite_rust",
    "//src/tests/fidl/client_suite/rust_util",
    "//third_party/rust_crates:futures",
    "//zircon/vdso/zx:zx_rust",
  ]
}

fuchsia_test_component("client") {
  manifest = "meta/client.cml"
  deps = [ ":bin" ]
}

fuchsia_package("rust_sync") {
  testonly = true
  package_name = "fidl_client_suite_rust_sync_client"
  deps = [ ":client" ]
}
