import("//build/components.gni")

executable("bin") {
  testonly = true
  output_name = "client_suite_harness"
  sources = [
    "basic_tests.cc",
    "coding_tests.cc",
    "harness.cc",
    "harness.h",
    "message_header_tests.cc",
    "ordinals.h",
    "peer_closed_tests.cc",
    "unknown_interactions_tests.cc",
  ]

  deps = [
    "//sdk/lib/component/incoming/cpp",
    "//sdk/lib/fdio",
    "//sdk/lib/fidl",
    "//src/lib/fxl",
    "//src/lib/fxl/test:gtest_main",
    "//src/lib/testing/loop_fixture",
    "//src/lib/testing/predicates:predicates",
    "//src/tests/fidl/channel_util",
    "//src/tests/fidl/client_suite/fidl:fidl.clientsuite_cpp",
    "//zircon/system/ulib/async-loop:async-loop-cpp",
    "//zircon/system/ulib/async-loop:async-loop-default",
  ]
}

fuchsia_component("component") {
  testonly = true
  component_name = "harness"
  manifest = "meta/harness.cml"
  deps = [ ":bin" ]
}

fuchsia_package("harness") {
  package_name = "fidl_client_suite_test_harness"
  testonly = true
  deps = [ ":component" ]
}
