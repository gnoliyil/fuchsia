import("//build/components.gni")

executable("bin") {
  output_name = "client_suite_under_test_hlcpp_async"
  sources = [ "main.cc" ]
  deps = [
    "//sdk/lib/fidl/cpp",
    "//sdk/lib/sys/cpp",
    "//src/tests/fidl/client_suite/fidl:fidl.clientsuite_hlcpp",
    "//src/tests/fidl/client_suite/hlcpp_util:hlcpp_util",
    "//zircon/system/ulib/async-loop:async-loop-cpp",
    "//zircon/system/ulib/async-loop:async-loop-default",
  ]
}

fuchsia_test_component("client") {
  manifest = "meta/client.cml"
  deps = [ ":bin" ]
}

fuchsia_package("hlcpp_async") {
  testonly = true
  package_name = "fidl_client_suite_hlcpp_async_client"
  deps = [ ":client" ]
}
