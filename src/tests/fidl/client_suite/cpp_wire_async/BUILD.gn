import("//build/components.gni")

executable("bin") {
  testonly = true
  output_name = "client_suite_under_test_cpp_wire_async"
  sources = [ "main.cc" ]
  deps = [
    "//sdk/lib/component/outgoing/cpp",
    "//src/tests/fidl/client_suite/cpp_util:cpp_util",
    "//src/tests/fidl/client_suite/fidl:fidl.clientsuite_cpp_wire",
    "//zircon/system/ulib/async:async-cpp",
    "//zircon/system/ulib/async-loop:async-loop-cpp",
    "//zircon/system/ulib/async-loop:async-loop-default",
  ]
}

fuchsia_test_component("client") {
  manifest = "meta/client.cml"
  deps = [ ":bin" ]
}

fuchsia_package("cpp_wire_async") {
  testonly = true
  package_name = "fidl_client_suite_cpp_wire_async_client"
  deps = [ ":client" ]
}
