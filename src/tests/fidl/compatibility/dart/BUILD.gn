import("//build/components.gni")
import("//build/dart/dart_component.gni")
import("//build/dart/dart_library.gni")
import("//build/go/toolchain.gni")

dart_library("bin") {
  package_name = "dart-impl"
  sources = [ "main.dart" ]
  deps = [
    "//sdk/dart/fidl",
    "//sdk/dart/fuchsia_services",
    "//src/tests/fidl/compatibility/fidl:fidl_import_dart",
    "//src/tests/fidl/compatibility/fidl:fidl_service_dart",
  ]
}

dart_component("impl") {
  manifest = "meta/impl.cml"
  main_package = "dart-impl"
  deps = [ ":bin" ]
}

fuchsia_package("dart") {
  testonly = true
  package_name = "fidl-compatibility-test-dart"
  deps = [ ":impl" ]
}
