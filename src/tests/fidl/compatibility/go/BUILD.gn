import("//build/components.gni")
import("//build/go/go_binary.gni")
import("//build/go/go_library.gni")
import("//build/go/toolchain.gni")

# The go_binary GN rule requires us to declare a go_library that creates the
# gopackage, even if the library doesn't have any sources.
go_library("lib") {
  deps = [
    "//src/lib/component",
    "//src/tests/fidl/compatibility/fidl:fidl_service_go($go_toolchain)",
  ]
  sources = [ "main.go" ]
}
go_binary("bin") {
  library = ":lib"
  output_name = "go-impl"
  output_dir = target_out_dir
}

fuchsia_component("impl") {
  testonly = true
  manifest = "meta/impl.cml"
  deps = [ ":bin" ]
}

fuchsia_package("go") {
  testonly = true
  package_name = "fidl-compatibility-test-go"
  deps = [ ":impl" ]
}
