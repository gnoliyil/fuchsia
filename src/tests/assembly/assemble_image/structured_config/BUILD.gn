  base_packages = [ "//examples/assembly/structured_config/configured_by_assembly($default_toolchain)" ]
  platform = {
    feature_set_level = "bootstrap"
    build_type = "eng"
    storage = {
      filesystems = {
        image_name = "assemble_test"
        volume = {
          fvm = {
            data = {
            }
            blob = {
            }
          }
        }
      }
    }
  }
  additional_args = [
    "--config",
    "assembly_example_enabled=true",
  ]
}
