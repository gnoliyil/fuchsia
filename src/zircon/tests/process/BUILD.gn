import("//build/components.gni")
import("//build/test.gni")

test("process") {
  output_name = "process-test"
  sources = [ "process.cc" ]
  deps = [
    "//sdk/lib/component/incoming/cpp",
    "//sdk/lib/fdio",
    "//src/lib/test-suite:test_suite_lib",
    "//zircon/system/ulib/mini-process",
    "//zircon/system/ulib/pretty",
    "//zircon/system/ulib/zircon-internal",
    "//zircon/system/ulib/zx",
    "//zircon/system/ulib/zxtest",
  ]
}

fuchsia_unittest_package("process-test-pkg") {
  manifest = "meta/process-test.cml"
  package_name = "process-test"
  deps = [ ":process" ]
}

group("tests") {
  testonly = true
  deps = [ ":process-test-pkg" ]
}
