{
    include: [
        "inspect/client.shard.cml",
        "syslog/client.shard.cml",
    ],
    program: {
        runner: "elf",
        binary: "bin/adb",
    },
    use: [
        {
            directory: "dev-adb",
            rights: [ "r*" ],
            path: "/dev/class/adb",
        },
        {
            protocol: "fuchsia.component.Realm",
            from: "parent",
        },
    ],
}
