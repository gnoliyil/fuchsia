// Add build-info to core
{
    children: [
        {
            name: "build-info",
            url: "fuchsia-pkg://fuchsia.com/build-info-service#meta/build-info.cm",
        },
    ],
    use: [
        {
            protocol: "fuchsia.buildinfo.Provider",
            from: "#build-info",
        },
    ],
    offer: [
        {
            directory: "build-info",
            from: "parent",
            to: "#build-info",
        },
        {
            protocol: "fuchsia.logger.LogSink",
            from: "parent",
            to: "#build-info",
        },
        {
            protocol: "fuchsia.buildinfo.Provider",
            from: "#build-info",
            to: "#cobalt",
        },
    ],
}
