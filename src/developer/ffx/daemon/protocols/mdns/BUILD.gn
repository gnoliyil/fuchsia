  test_deps = [
    "//src/lib/mdns/rust:mdns",
    "//src/lib/network/packet",
    "//third_party/rust_crates:lazy_static",
    "//third_party/rust_crates:socket2",
  ]

  sources = [ "src/lib.rs" ]
}

group("tests") {
  testonly = true
  deps = [ ":ffx_daemon_protocol_mdns_test" ]
}
