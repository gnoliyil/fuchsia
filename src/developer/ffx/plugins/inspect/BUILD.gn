import("//src/developer/ffx/build/ffx_plugin.gni")
import("//src/developer/ffx/build/ffx_tool.gni")

ffx_plugin("ffx_inspect") {
  version = "0.1.0"
  edition = "2021"
  plugin_deps = [
    "apply_selectors:ffx_inspect_apply_selectors",
    "list:ffx_inspect_list",
    "list_accessors:ffx_inspect_list_accessors",
    "list_files:ffx_inspect_list_files",
    "selectors:ffx_inspect_selectors",
    "show:ffx_inspect_show",
  ]

  args_sources = [ "src/args.rs" ]
  deps = [ "//src/developer/ffx/lib/writer:lib" ]
}

ffx_tool("ffx_inspect_tool") {
  edition = "2021"
  output_name = "ffx-inspect"
  deps = [
    ":ffx_inspect_suite",
    "//src/lib/fuchsia-async",
  ]
  sources = [ "src/main.rs" ]
}
