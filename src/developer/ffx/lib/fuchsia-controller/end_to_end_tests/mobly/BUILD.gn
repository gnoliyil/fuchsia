import("//build/python/python_mobly_test.gni")
import("//build/testing/environments.gni")
import("//build/testing/host_test_data.gni")

assert(is_host)

group("fuchsia_controller_tests") {
  testonly = true
  deps = [
    ":reboot_test",
    ":target_identity_tests",
    ":tracing_test",
  ]
}

python_mobly_test("target_identity_tests") {
  main_source = "target_identity_tests.py"
  libraries = [
    "//src/developer/ffx/lib/fuchsia-controller:fidl_bindings",
    "//src/developer/ffx/lib/fuchsia-controller/end_to_end_tests/mobly/mobly_controller",
  ]
  transport = "fuchsia-controller"
  environments = [ emu_env ]
  deps = [
    "//sdk/fidl/fuchsia.developer.ffx:fuchsia.developer.ffx_host_test_data",
    "//sdk/fidl/fuchsia.device:fuchsia.device_host_test_data",
    "//sdk/fidl/fuchsia.feedback:fuchsia.feedback_host_test_data",
    "//sdk/fidl/fuchsia.hardware.power.statecontrol:fuchsia.hardware.power.statecontrol_host_test_data",
    "//sdk/fidl/fuchsia.io:fuchsia.io_host_test_data",
    "//src/developer/ffx/lib/fuchsia-controller/tests:fuchsia_controller_test_data",
  ]
}

python_mobly_test("reboot_test") {
  main_source = "reboot_test.py"
  libraries = [
    "//src/developer/ffx/lib/fuchsia-controller:fidl_bindings",
    "//src/developer/ffx/lib/fuchsia-controller/end_to_end_tests/mobly/mobly_controller",
  ]
  transport = "fuchsia-controller"
  environments = [ emu_env ]
  deps = [
    "//sdk/fidl/fuchsia.developer.ffx:fuchsia.developer.ffx_host_test_data",
    "//sdk/fidl/fuchsia.hardware.power.statecontrol:fuchsia.hardware.power.statecontrol_host_test_data",
    "//src/developer/ffx/lib/fuchsia-controller/tests:fuchsia_controller_test_data",
  ]
}

host_test_data("tracing_runtime_deps") {
  sources = [ "$root_out_dir/trace2json" ]
  outputs = [ "$root_build_dir/tracing_runtime_deps/{{source_file_part}}" ]
  deps = [ "//src/performance/trace2json:bin" ]
}

python_mobly_test("tracing_test") {
  main_source = "tracing_test.py"
  libraries = [
    "//src/developer/ffx/lib/fuchsia-controller:fidl_bindings",
    "//src/developer/ffx/lib/fuchsia-controller/end_to_end_tests/mobly/mobly_controller",
  ]
  transport = "fuchsia-controller"
  environments = [ emu_env ]
  deps = [
    ":tracing_runtime_deps",
    "//sdk/fidl/fuchsia.tracing:fuchsia.tracing_host_test_data",
    "//sdk/fidl/fuchsia.tracing.controller:fuchsia.tracing.controller_host_test_data",
    "//src/developer/ffx/lib/fuchsia-controller/tests:fuchsia_controller_test_data",
  ]
}

python_mobly_test("multi_device_test") {
  main_source = "multi_device_test.py"
  libraries = [
    "//src/developer/ffx/lib/fuchsia-controller:fidl_bindings",
    "//src/developer/ffx/lib/fuchsia-controller/end_to_end_tests/mobly/mobly_controller",
  ]
  transport = "fuchsia-controller"
  multi_fuchsia_device = true
  deps = [
    ":tracing_runtime_deps",
    "//sdk/fidl/fuchsia.bluetooth.sys:fuchsia.bluetooth.sys_host_test_data",
    "//src/developer/ffx/lib/fuchsia-controller/tests:fuchsia_controller_test_data",
  ]
}
