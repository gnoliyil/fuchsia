import("//build/rust/rustc_library.gni")

rustc_library("lib") {
  name = "sdk"
  version = "0.1.0"
  edition = "2021"
  with_unit_tests = true

  deps = [
    "//build/sdk/meta:rust",
    "//src/developer/ffx/lib/errors:lib",
    "//third_party/rust_crates:anyhow",
    "//third_party/rust_crates:serde",
    "//third_party/rust_crates:serde_json",
    "//third_party/rust_crates:tracing",
  ]

  test_deps = [
    "//src/lib/fuchsia-async",
    "//third_party/rust_crates:tempfile",
  ]

  sources = [ "src/lib.rs" ]

  inputs = [
    "test_data/core-sdk-root/host_arm64/gen/tools/symbol-index/symbol_index_sdk.meta.json",
    "test_data/core-sdk-root/sdk/manifest/core",
    "test_data/core-sdk-root/host_x64/gen/src/developer/ffx/plugins/assembly/sdk.meta.json",
    "test_data/core-sdk-root/host_x64/gen/src/developer/debug/zxdb/zxdb_sdk.meta.json",
    "test_data/core-sdk-root/host_x64/gen/tools/symbol-index/symbol_index_sdk_legacy.meta.json",
    "test_data/core-sdk-root/host_x64/gen/tools/symbol-index/symbol_index_sdk.meta.json",
    "test_data/release-sdk-root/fidl/fuchsia.data/meta.json",
    "test_data/release-sdk-root/ffx_tools/x64/ffx-assembly-meta.json",
    "test_data/release-sdk-root/meta/manifest.json",
    "test_data/release-sdk-root/tools/zxdb-meta.json",
  ]
}

group("tests") {
  testonly = true
  deps = [ ":lib_test" ]
}

group("sdk") {
  testonly = true

  deps = [
    ":lib",
    ":tests",
  ]
}
