import("//build/rust/rustc_library.gni")

rustc_library("lib") {
  name = "ffx_validation"
  version = "0.1.0"
  edition = "2021"
  with_unit_tests = true
  sources = [
    "src/lib.rs",
    "src/schema.rs",
    "src/schema/macros.rs",
    "src/validate.rs",
  ]

  deps = [
    "proc_macro",
    "//third_party/rust_crates:serde",
    "//third_party/rust_crates:serde_json",
    "//third_party/rust_crates:thiserror",
  ]
}

group("tests") {
  testonly = true
  deps = [ ":lib_test($host_toolchain)" ]
}

group("validation") {
  testonly = true

  deps = [
    ":lib",
    ":tests",
  ]
}
