import("//build/components.gni")

###############################################################################
# GROUPS
###############################################################################
group("snapshot") {
  testonly = true

  deps = [ ":pkg" ]
}

# TODO(fxbug.dev/125505): Delete this once we include the snapshot tool based on
# the build type.
group("snapshot_deprecated") {
  deps = [ ":pkg" ]
}

###############################################################################
# PACKAGES
###############################################################################
fuchsia_shell_package("pkg") {
  package_name = "snapshot"

  deps = [
    ":main",
    "//build/validate:non_production_tag",
  ]
}

###############################################################################
# EXECUTABLES
###############################################################################
executable("main") {
  output_name = "snapshot"

  sources = [ "main.cc" ]

  deps = [
    ":snapshotter",
    "//sdk/lib/sys/cpp",
  ]
}

###############################################################################
# SOURCES
###############################################################################
source_set("snapshotter") {
  sources = [
    "snapshotter.cc",
    "snapshotter.h",
  ]

  public_deps = [ "//sdk/lib/sys/cpp" ]

  deps = [
    "//sdk/fidl/fuchsia.feedback:fuchsia.feedback_hlcpp",
    "//zircon/system/ulib/zx",
  ]
}
