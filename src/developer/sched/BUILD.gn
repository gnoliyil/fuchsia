import("//build/components.gni")

group("tests") {
  testonly = true
  public_deps = [ ":sched_tests" ]
}

source_set("lib") {
  sources = [
    "args.cc",
    "sched.cc",
  ]

  public_deps = [
    "//sdk/fidl/fuchsia.scheduler:fuchsia.scheduler_hlcpp",
    "//sdk/lib/fdio",
    "//sdk/lib/sys/cpp",
    "//src/lib/fxl",
    "//zircon/system/ulib/async-loop:async-loop-cpp",
    "//zircon/system/ulib/async-loop:async-loop-default",
    "//zircon/system/ulib/cmdline",
    "//zircon/system/ulib/zx",
  ]
}

executable("bin") {
  output_name = "sched"

  sources = [ "main.cc" ]

  deps = [ ":lib" ]
}

fuchsia_shell_package("sched") {
  deps = [ ":bin" ]
}

executable("bin_test") {
  testonly = true

  output_name = "sched_tests"

  sources = [ "sched_test.cc" ]

  deps = [
    ":lib",
    "//src/lib/files",
    "//src/lib/fxl",
    "//src/lib/fxl/test:gtest_main",
    "//third_party/googletest:gmock",
    "//zircon/system/ulib/zx",
  ]
}

fuchsia_test_component("sched_tests_component") {
  manifest = "meta/sched_tests.cml"
  deps = [
    ":bin_test",
    "//third_party/sbase:echo_bin",
  ]
  test_type = "system"
}

fuchsia_test_package("sched_tests") {
  test_components = [ ":sched_tests_component" ]
}
