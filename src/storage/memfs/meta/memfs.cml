{
    include: [ "syslog/client.shard.cml" ],
    program: {
        runner: "elf",
        binary: "bin/memfs",
    },
    capabilities: [
        {
            directory: "memfs",
            rights: [ "rw*" ],
            path: "/root",
        },
    ],
    use: [
        { protocol: "fuchsia.scheduler.ProfileProvider" },
    ],
    expose: [
        {
            directory: "memfs",
            from: "self",
        },
    ],
}
