{
    include: [
        "//src/lib/storage/fs_management/client.shard.cml",
        "inspect/client.shard.cml",
        "syslog/client.shard.cml",
    ],
    program: {
        runner: "elf",
        binary: "bin/fs_realm",
        lifecycle: { stop_event: "notify" },
    },
    capabilities: [
        {
            directory: "mnt",
            rights: [ "rw*" ],
            path: "/mnt",
        },
        {
            protocol: [ "fuchsia.fs.realm.Controller" ],
        },
    ],
    expose: [
        {
            directory: [ "mnt" ],
            from: "self",
        },
        {
            protocol: [ "fuchsia.fs.realm.Controller" ],
            from: "self",
        },
    ],
}
