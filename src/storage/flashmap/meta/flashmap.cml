{
    include: [
        "inspect/client.shard.cml",
        "syslog/client.shard.cml",
    ],
    program: {
        runner: "elf",
        binary: "bin/flashmap",
    },
    capabilities: [
        { protocol: "fuchsia.nand.flashmap.Manager" },
    ],
    use: [
        {
            directory: "dev-topological",
            rights: [ "r*" ],
            path: "/dev",
        },
    ],
    expose: [
        {
            protocol: "fuchsia.nand.flashmap.Manager",
            from: "self",
        },
    ],
}
