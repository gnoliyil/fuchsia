{
    include: [ "//src/storage/stress-tests/genericfs/meta/genericfs.shard.cml" ],
    program: {
        binary: "bin/fs_stressor",
        args: [
            // Ramdisk disconnection every 90 seconds
            "--disconnect-secs",
            "90",

            // 6 hour time limit
            "--time-limit-secs",
            "21600",
            "--target-filesystem",
            "f2fs",
        ],
    },
}
