import("//build/components.gni")
import("//src/starnix/kernel/starnix.gni")

group("benchmarks") {
  testonly = true

  deps = [ ":starnix_benchmarks" ]
}

resource("bin") {
  sources = [ "${gvisor_prebuilt_directory}/stripped/benchmarks" ]
  outputs = [ "data/tests/benchmarks" ]
}

fuchsia_test_component("test_component") {
  component_name = "starnix_benchmarks"
  manifest = "meta/benchmarks.cml"

  deps = [ ":bin" ]
}

fuchsia_test_package("starnix_benchmarks") {
  package_name = "starnix_benchmarks"
  test_components = [ ":test_component" ]

  if (target_cpu == "x64") {
    subpackages = [ "//src/starnix/kernel:starnix_kernel_package" ]
  }

  deps = [ "//src/starnix/tests/gvisor:container_resources" ]
}
