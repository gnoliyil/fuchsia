{
    include: [ "syslog/client.shard.cml" ],
    program: {
        runner: "elf",
        binary: "bin/starnix_runner",
    },
    children: [
        {
            name: "stardroid",
            url: "fuchsia-pkg://fuchsia.com/stardroid#meta/stardroid.cm",
            environment: "#container-env",
        },
    ],
    collections: [
        {
            name: "playground",
            environment: "#starnix-env",
            durability: "single_run",
        },
        {
            name: "kernels",
            durability: "single_run",
            allowed_offers: "static_and_dynamic",
        },
    ],
    capabilities: [
        {
            runner: "starnix",
            path: "/svc/fuchsia.component.runner.ComponentRunner",
        },
        {
            protocol: [
                "fuchsia.component.runner.ComponentRunner",
                "fuchsia.starnix.developer.Manager",
            ],
        },
        {
            directory: "kernels",
            rights: [ "r*" ],
            path: "/kernels",
        },
    ],
    use: [
        {
            protocol: "fuchsia.starnix.container.Controller",
            from: "#stardroid",
            path: "/stardroid/fuchsia.starnix.container.Controller",
            dependency: "weak",
        },
        {
            protocol: "fuchsia.component.Realm",
            from: "framework",
        },
    ],
    offer: [
        {
            protocol: [
                "fuchsia.kernel.VmexResource",
                "fuchsia.logger.LogSink",
                "fuchsia.posix.socket.Provider",
                "fuchsia.posix.socket.raw.Provider",
                "fuchsia.sysmem.Allocator",
                "fuchsia.tracing.provider.Registry",
                "fuchsia.vulkan.loader.Loader",
            ],
            from: "parent",
            to: [
                "#kernels",
                "#stardroid",
            ],
        },
        {
            protocol: [
                "fuchsia.power.battery.BatteryManager",
                "fuchsia.ui.composition.Allocator",
                "fuchsia.ui.composition.Flatland",
                "fuchsia.ui.input3.Keyboard",
                "fuchsia.ui.scenic.Scenic",
            ],
            from: "parent",
            to: [
                "#kernels",
                "#stardroid",
            ],
            availability: "optional",
        },
        {
            protocol: [ "fuchsia.logger.LogSink" ],
            from: "parent",
            to: "#playground",
        },
        {
            directory: "dev-gpu",
            from: "parent",
            to: [ "#kernels" ],
        },
    ],
    expose: [
        {
            runner: "starnix",
            from: "#stardroid",
            as: "stardroid",
        },
        {
            runner: "starnix",
            from: "self",
        },
        {
            protocol: "fuchsia.starnix.developer.Manager",
            from: "self",
        },
    ],
    environments: [
        {
            name: "starnix-env",
            extends: "realm",
            runners: [
                {
                    runner: "starnix",
                    from: "#stardroid",
                    as: "stardroid",
                },
                {
                    runner: "starnix",
                    from: "self",
                },
            ],
        },
        {
            name: "container-env",
            extends: "realm",
            runners: [
                {
                    runner: "starnix",
                    from: "self",
                },
            ],
        },
    ],
}
