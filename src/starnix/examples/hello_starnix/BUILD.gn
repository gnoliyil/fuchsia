import("//build/components.gni")

config("config") {
  asmflags = [ "-fPIC" ]
}

executable("bin") {
  output_name = "hello_starnix"
  if (current_cpu == "x64") {
    sources = [ "hello_x64.S" ]
  } else if (current_cpu == "arm64") {
    sources = [ "hello_aarch64.S" ]
  }

  disable_syslog_backend = true

  configs += [
    "//build/config/fuchsia:no_cpp_standard_library",
    "//build/config/fuchsia:static-pie-config",
    ":config",
  ]
}

fuchsia_package_with_single_component("hello_starnix") {
  component_name = "hello_starnix"
  manifest = "meta/hello_starnix.cml"
  deps = [ ":bin" ]
}
