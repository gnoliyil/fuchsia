{
    include: [
        "//src/sys/test_runners/rust/default.shard.cml",
        "inspect/client.shard.cml",
        "sys/component/realm_builder.shard.cml",
        "syslog/client.shard.cml",
    ],
    program: {
        binary: "bin/do_not_disturb_integration_test",
    },
    offer: [
        {
            protocol: [ "fuchsia.logger.LogSink" ],
            from: "parent",
            to: "#realm_builder",
        },
        {
            storage: "data",
            from: "parent",
            to: "#realm_builder",
        },
        {
            directory: "pkg",
            from: "framework",
            as: "config-data",
            to: "#realm_builder",
            rights: [ "r*" ],
            subdir: "do_not_disturb_integration_test_pkg",
        },
    ],
}
