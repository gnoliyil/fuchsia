// Include by a realm that needs a hermetic font component.
{
    children: [
        {
            name: "fonts",
            url: "#meta/font_provider_hermetic_for_test.cm",
        },
    ],
    offer: [
        {
            protocol: [
                "fuchsia.logger.LogSink",
                "fuchsia.tracing.provider.Registry",
            ],
            to: "#fonts",
        },
        {
            directory: "diagnostics",
            to: "#fonts",
            rights: [ "connect" ],
            path: "/diagnostics",
        },
    ],
    expose: [
        {
            protocol: [
                "fuchsia.fonts.experimental.Provider",
                "fuchsia.fonts.Provider",
            ],
            from: "#fonts",
        },
    ],
}
