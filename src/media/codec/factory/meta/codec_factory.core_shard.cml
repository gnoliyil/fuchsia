{
    children: [
        {
            name: "codec_factory",
            url: "fuchsia-pkg://fuchsia.com/codec_factory#meta/codec_factory.cm",
            environment: "#core-env",
        },
    ],
    use: [
        {
            protocol: "fuchsia.mediacodec.CodecFactory",
            from: "#codec_factory",
        },
    ],
    offer: [
        {
            directory: "dev-class",
            from: "parent",
            as: "dev-mediacodec",
            to: "#codec_factory",
            subdir: "media-codec",
        },
        {
            directory: "dev-class",
            from: "parent",
            as: "dev-gpu",
            to: "#codec_factory",
            subdir: "gpu",
        },
        {
            protocol: "fuchsia.metrics.MetricEventLoggerFactory",
            from: "#cobalt",
            to: "#codec_factory",
        },
        {
            protocol: [ "fuchsia.sysmem.Allocator" ],
            from: "#sysmem_connector",
            to: "#codec_factory",
        },
        {
            protocol: [
                "fuchsia.logger.LogSink",
                "fuchsia.sysinfo.SysInfo",
            ],
            from: "parent",
            to: "#codec_factory",
        },

        // needed for certain non-hermetic tests.
        {
            protocol: [ "fuchsia.mediacodec.CodecFactory" ],
            from: "#codec_factory",
            to: [ "#test_manager" ],
        },
    ],
}
