import("//build/fuzz.gni")

group("audio") {
  testonly = true
  deps = [
    ":tests",
    ":tools",
    "audio_core",
    "drivers",
    "examples",
    "lib",
    "services",
  ]
}

fuchsia_fuzzer_component("audio-core-config-fuzzer-component") {
  manifest = "audio_core/shared/meta/audio_core_config_fuzzer.cml"
  deps = [ "audio_core/shared:audio_core_config_fuzzer" ]
}

fuchsia_fuzzer_package("audio-fuzzers") {
  cpp_fuzzer_components = [ ":audio-core-config-fuzzer-component" ]
}

group("tests") {
  testonly = true
  deps = [
    ":audio-fuzzers",
    "audio_core:tests",
    "drivers:tests",
    "examples:tests",
    "lib:tests",
    "services:tests",
    "tools:tests",
  ]
}

group("tools") {
  testonly = true
  deps = [
    "audio_core:tools",
    "tools",
  ]
}
