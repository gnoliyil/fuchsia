{
    children: [
        {
            name: "audio_device_registry",
            url: "fuchsia-pkg://fuchsia.com/audio_device_registry#meta/audio_device_registry.cm",
        },
    ],
    offer: [
        {
            directory: "dev-class",
            from: "parent",
            as: "dev-audio-input",
            to: "#audio_device_registry",
            subdir: "audio-input",
        },
        {
            directory: "dev-class",
            from: "parent",
            as: "dev-audio-output",
            to: "#audio_device_registry",
            subdir: "audio-output",
        },
    ],
}
