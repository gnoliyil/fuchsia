    "device_presence_watcher.h",
    "logging.cc",
    "logging.h",
    "observer_notify.h",
    "observer_server.cc",
    "observer_server.h",
    "provider_server.cc",
    "provider_server.h",
    "registry_server.cc",
    "registry_server.h",
    "ring_buffer_server.cc",
    "ring_buffer_server.h",
