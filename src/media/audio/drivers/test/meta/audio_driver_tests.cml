{
    include: [
        "//sdk/lib/sys/component/realm_builder.shard.cml",

        // This test defines its own main
        "//sdk/lib/sys/testing/elf_test_runner.shard.cml",
        "//sdk/lib/sys/testing/system-test.shard.cml",
        "//sdk/lib/syslog/client.shard.cml",
    ],
    program: {
        binary: "bin/audio_driver_tests",
    },
    use: [
        {
            protocol: [
                "fuchsia.scheduler.ProfileProvider",
                "fuchsia.virtualaudio.Control",
                "fuchsia.virtualaudio.Device",
            ],
        },
        {
            directory: "dev-audio-input",
            rights: [ "r*" ],
            path: "/dev/class/audio-input",
        },
        {
            directory: "dev-audio-output",
            rights: [ "r*" ],
            path: "/dev/class/audio-output",
        },
        {
            directory: "dev-dai",
            rights: [ "r*" ],
            path: "/dev/class/dai",
        },
        {
            directory: "dev-composite",
            rights: [ "r*" ],
            path: "/dev/class/audio-composite",
        },

        // This is used to enable (and then test) virtual_audio driver instances.
        {
            directory: "sys",
            rights: [ "r*" ],
            path: "/dev/sys",
        },
    ],
}
