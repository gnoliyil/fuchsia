import("//build/components.gni")
import("//build/test.gni")

test("alc5663-test") {
  output_name = "alc5663-test"

  sources = [
    "alc5663_test.cc",
    "fake_i2c.cc",
    "fake_i2c.h",
    "i2c_client_test.cc",
  ]
  include_dirs = [ ".." ]
  deps = [
    "//sdk/fidl/fuchsia.hardware.i2c:fuchsia.hardware.i2c_cpp_wire",
    "//sdk/lib/component/outgoing/cpp",
    "//src/devices/i2c/testing/mock-i2c",
    "//src/devices/testing/mock-ddk",
    "//src/media/audio/drivers/codecs/alc5663:shared",
    "//zircon/system/ulib/async-loop:async-loop-cpp",
    "//zircon/system/ulib/async-loop:async-loop-default",
    "//zircon/system/ulib/async-loop/testing:async-loop-testing",
    "//zircon/system/ulib/zxtest",
  ]
}

fuchsia_unittest_package("alc5663-test-package") {
  package_name = "alc5663-test"
  deps = [ ":alc5663-test" ]

  test_specs = {
    environments = basic_envs
    log_settings = {
      max_severity = "ERROR"
    }
  }
}

group("tests") {
  testonly = true
  deps = [ ":alc5663-test-package" ]
}
