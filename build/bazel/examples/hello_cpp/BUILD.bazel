load(
    "@rules_fuchsia//fuchsia:defs.bzl",
    "fuchsia_cc_binary",
    "fuchsia_cc_test",
    "fuchsia_component",
    "fuchsia_component_manifest",
    "fuchsia_package",
    "fuchsia_test_component",
    "fuchsia_test_package",
    "if_fuchsia",
)

fuchsia_cc_binary(
    name = "hello_world",
    srcs = [
        "hello_world.cc",
    ],
    deps = [
        "@fuchsia_sdk//pkg/fdio",
        "@fuchsia_sdk//pkg/syslog",
        "@internal_sdk//src/lib/fxl_fxl",
        "@internal_sdk//src/lib/files_files",
        "@internal_sdk//third_party/re2_re2",
        # the fidl libraries below are not effectively used in the hello world sample, they are here just to validate that
        # the Bazel build can include FIDL dependencies from both internal and partner SDK correctly:
        "@fuchsia_sdk//fidl/fuchsia.component.config:fuchsia.component.config_cc",
        "@internal_sdk//fidl/fuchsia.exception:fuchsia.exception_cc",
    ],
)

fuchsia_component_manifest(
    name = "manifest",
    src = "meta/hello_world.cml",
    includes = [
        "@fuchsia_sdk//pkg/syslog:client",
        # TODO(fxbug.dev/116670): make the below implicit
        # as transitive includes of the above.
        "@fuchsia_sdk//pkg/syslog:offer",
        "@fuchsia_sdk//pkg/syslog:use",
    ],
)

fuchsia_component(
    name = "component",
    manifest = ":manifest",
    deps = [":hello_world"],
)

fuchsia_package(
    name = "pkg",
    package_name = "hello_cpp",
    components = [
        ":component",
    ],
)

fuchsia_cc_test(
    name = "hello_test",
    size = "small",
    srcs = ["hello_test.cc"],
    deps = if_fuchsia([
        "@fuchsia_sdk//pkg/fdio",
        "@fuchsia_sdk//pkg/syslog",
    ]),
)

fuchsia_component_manifest(
    name = "hello_test_manifest",
    src = "meta/hello_test.cml",
    includes = [
        "@fuchsia_sdk//pkg/sys/testing:elf_test_runner",
        "@fuchsia_sdk//pkg/syslog:client",
        # TODO(fxbug.dev/116670): make the below implicit
        # as transitive includes of the above.
        "@fuchsia_sdk//pkg/syslog:offer",
        "@fuchsia_sdk//pkg/syslog:use",
    ],
)

fuchsia_test_component(
    name = "hello_test_component",
    manifest = ":hello_test_manifest",
    deps = [":hello_test"],
)

fuchsia_cc_test(
    name = "hello_gtest",
    size = "small",
    srcs = ["hello_gtest.cc"],
    deps = ["@com_google_googletest//:gtest_main"] + if_fuchsia([
        "@fuchsia_sdk//pkg/fdio",
        "@fuchsia_sdk//pkg/syslog",
    ]),
)

fuchsia_component_manifest(
    name = "hello_gtest_manifest",
    src = "meta/hello_gtest.cml",
    includes = [
        "@fuchsia_sdk//pkg/sys/testing:elf_test_runner",
        "@fuchsia_sdk//pkg/syslog:client",
        # TODO(fxbug.dev/116670): make the below implicit
        # as transitive includes of the above.
        "@fuchsia_sdk//pkg/syslog:offer",
        "@fuchsia_sdk//pkg/syslog:use",
    ],
)

fuchsia_test_component(
    name = "hello_gtest_component",
    manifest = ":hello_gtest_manifest",
    deps = [":hello_test"],
)

fuchsia_test_package(
    name = "test_pkg",
    package_name = "hello_cpp_test",
    components = [
        ":hello_gtest_component",
        ":hello_test_component",
    ],
    visibility = ["//visibility:public"],
)
