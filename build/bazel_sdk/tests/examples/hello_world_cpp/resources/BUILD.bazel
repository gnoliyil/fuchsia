load(
    "@fuchsia_sdk//fuchsia:defs.bzl",
    "fuchsia_package_resource",
    "fuchsia_package_resource_group",
)

fuchsia_package_resource(
    name = "text_file",
    src = "text.txt",
    dest = "data/text.txt",
    visibility = ["//examples/hello_world_cpp:__subpackages__"],
)

fuchsia_package_resource_group(
    name = "assets",
    srcs = glob(["assets/**/*"]),
    dest = "data",
    strip_prefix = "assets",
    visibility = ["//examples/hello_world_cpp:__subpackages__"],
)
