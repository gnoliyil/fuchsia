  ]
}

fuchsia_component("echo_client") {
  testonly = true
  deps = [ ":echo_client_bin" ]
  manifest = "meta/echo_client.cml"
}

fuchsia_test_package("component_cpp_incoming_tests") {
  test_components = [
    ":incoming_test",
    ":incoming_integration_test",
  ]

  deps = [
    ":echo_client",
    ":echo_service_client",
  ]
}

