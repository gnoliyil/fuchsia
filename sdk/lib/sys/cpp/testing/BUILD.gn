import("//build/cpp/sdk_source_set.gni")

sdk_source_set("cpp") {
  testonly = true

  category = "partner"

  sdk_name = "sys_cpp_testing"

  include_base = "//sdk"

  sources = [
    "component_context_provider.cc",
    "component_context_provider.h",
    "enclosing_environment.cc",
    "enclosing_environment.h",
    "fake_component.cc",
    "fake_component.h",
    "fake_launcher.cc",
    "fake_launcher.h",
    "launcher_impl.cc",
    "launcher_impl.h",
    "service_directory_provider.cc",
    "service_directory_provider.h",
    "test_with_environment.cc",
    "test_with_environment.h",
  ]

  public_deps = [
    "//sdk/fidl/fuchsia.io:fuchsia.io_hlcpp",
    "//sdk/lib/async-loop-testing/cpp",
    "//sdk/lib/fit",
    "//sdk/lib/sys/cpp",
    "//zircon/system/ulib/zx",
  ]

  deps = [
    "//sdk/lib/fdio",
    "//sdk/lib/vfs/cpp",
  ]

  public_configs = [ "//sdk/config" ]
}

