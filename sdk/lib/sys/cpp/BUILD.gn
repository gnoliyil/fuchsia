import("//build/cpp/sdk_source_set.gni")

sdk_source_set("cpp") {
  category = "partner"

  sdk_name = "sys_cpp"

  include_base = "//sdk"
  sources = [
    "component_context.cc",
    "component_context.h",
    "file_descriptor.cc",
    "file_descriptor.h",
    "outgoing_directory.cc",
    "outgoing_directory.h",
    "service_directory.cc",
    "service_directory.h",
    "termination_reason.cc",
    "termination_reason.h",
  ]

  public_deps = [
    "//sdk/fidl/fuchsia.io:fuchsia.io_hlcpp",
    "//sdk/fidl/fuchsia.sys:fuchsia.sys_hlcpp",
    "//sdk/lib/fit",
    "//sdk/lib/sys/service/cpp",
    "//zircon/system/ulib/zx",
  ]

  deps = [
    "//sdk/lib/fdio",
    "//sdk/lib/vfs/cpp",
  ]

  public_configs = [ "//sdk/config" ]
}

group("tests") {
  testonly = true
  deps = [ "tests" ]
}
