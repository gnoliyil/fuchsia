  excluded_checks = [
    "string-bounds-not-specified",
    "vector-bounds-not-specified",
  ]

  sdk_category = "partner"

  sources = [
    "calendar.fidl",
    "intl.fidl",
    "overview.fidl",
    "property_provider.fidl",
    "time_zones.fidl",
  ]

  public_deps = [ "//zircon/vdso/zx" ]

  enable_hlcpp = true
}
