  sources = [
    "cpu-resource.fidl",
    "debug-resource.fidl",
    "hypervisor-resource.fidl",
    "info-resource.fidl",
    "ioport-resource.fidl",
    "irq-resource.fidl",
    "kernel-counter.fidl",
    "kernel-debug.fidl",
    "kernel-stats.fidl",
    "mexec-resource.fidl",
    "mmio-resource.fidl",
    "overview.fidl",
    "power-resource.fidl",
    "root-job.fidl",
    "smc-resource.fidl",
    "vmex-resource.fidl",
