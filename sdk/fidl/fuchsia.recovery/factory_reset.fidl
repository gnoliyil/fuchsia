@available(added=7)
library fuchsia.recovery;

using zx;

/// A protocol for intitiating a factory reset.
@discoverable
protocol FactoryReset {
    /// Request an immediate factory reset. If unsuccessful will return an
    /// error.
    Reset() -> (struct {
        status zx.Status;
    });
};
