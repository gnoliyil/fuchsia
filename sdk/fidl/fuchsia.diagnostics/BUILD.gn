  sdk_category = "partner"
  api = "fuchsia.diagnostics.api"
  sources = [
    "format.fidl",
    "inspect_sink.fidl",
    "interest.fidl",
    "log_settings.fidl",
    "overview.fidl",
    "reader.fidl",
    "selector.fidl",
    "severity.fidl",
  ]

  public_deps = [
    "//sdk/fidl/fuchsia.inspect",
    "//sdk/fidl/fuchsia.mem",
    "//zircon/vdso/zx",
  ]

  enable_hlcpp = true
}
