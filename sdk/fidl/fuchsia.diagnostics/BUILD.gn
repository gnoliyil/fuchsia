  sdk_category = "partner"
  api = "fuchsia.diagnostics.api"
  sources = [
    "format.fidl",
    "interest.fidl",
    "log_settings.fidl",
    "overview.fidl",
    "reader.fidl",
    "selector.fidl",
    "severity.fidl",
  ]

  public_deps = [ "//sdk/fidl/fuchsia.mem" ]
  enable_c = true
  enable_hlcpp = true
}
