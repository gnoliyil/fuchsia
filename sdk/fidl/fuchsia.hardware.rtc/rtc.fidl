library fuchsia.hardware.rtc;

using zx;

type Time = struct {
    seconds uint8;
    minutes uint8;
    hours uint8;
    day uint8;
    month uint8;
    year uint16;
};

protocol Device {
    /// Get the current RTC time
    Get() -> (struct {
        rtc Time;
    });

    /// Set the RTC time
    Set(struct {
        rtc Time;
    }) -> (struct {
        status zx.status;
    });
};
