import("//build/fidl/fidl.gni")

fidl("fuchsia.wlan.mlme") {
  # TODO(fxbug.dev/35879): Remove lint exclusions by fixing known FIDL lint violations in this target
  excluded_checks = [
    "event-names-must-start-with-on",
    "invalid-case-for-constant",
    "invalid-case-for-decl-name",
    "vector-bounds-not-specified",
  ]

  sources = [
    "wlan_mlme.fidl",
    "wlan_mlme_ext.fidl",
  ]

  public_deps = [
    "//sdk/fidl/fuchsia.wlan.common",
    "//sdk/fidl/fuchsia.wlan.ieee80211",
    "//sdk/fidl/fuchsia.wlan.internal",
    "//sdk/fidl/fuchsia.wlan.mesh",
    "//sdk/fidl/fuchsia.wlan.minstrel",
    "//sdk/fidl/fuchsia.wlan.stats",
    "//zircon/vdso/zx",
  ]
  enable_banjo = true
  enable_c = true
  enable_hlcpp = true
}
