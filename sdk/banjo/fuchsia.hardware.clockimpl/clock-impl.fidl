library fuchsia.hardware.clockimpl;

using zx;

/// Each method in this protocol has a corresponding method in clock.banjo
/// with an additional ID parameter.
/// The ID parameter in each method below designates the clock in the system
/// that the call is intended to target.
/// Conversely, each instance of ZX_PROTOCOL_CLOCK pertains to only one clock
/// in the system.
/// See clock.banjo for documentation for each method.
@transport("Banjo")
@banjo_layout("ddk-protocol")
protocol ClockImpl {
    /// Clock Gating Control.
    Enable(struct {
        id uint32;
    }) -> (struct {
        s zx.Status;
    });
    Disable(struct {
        id uint32;
    }) -> (struct {
        s zx.Status;
    });
    IsEnabled(struct {
        id uint32;
    }) -> (struct {
        s zx.Status;
        enabled bool;
    });

    /// Clock Frequency Scaling Control.
    SetRate(struct {
        id uint32;
        hz uint64;
    }) -> (struct {
        s zx.Status;
    });
    QuerySupportedRate(struct {
        id uint32;
        hz uint64;
    }) -> (struct {
        s zx.Status;
        hz uint64;
    });
    GetRate(struct {
        id uint32;
    }) -> (struct {
        s zx.Status;
        hz uint64;
    });

    /// Clock input control.
    SetInput(struct {
        id uint32;
        idx uint32;
    }) -> (struct {
        s zx.Status;
    });
    GetNumInputs(struct {
        id uint32;
    }) -> (struct {
        s zx.Status;
        n uint32;
    });
    GetInput(struct {
        id uint32;
    }) -> (struct {
        s zx.Status;
        index uint32;
    });
};
