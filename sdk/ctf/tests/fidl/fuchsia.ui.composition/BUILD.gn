import("//sdk/ctf/build/ctf.gni")

ctf_rustc_test("fuchsia_ui_composition_flatland_test_bin") {
  edition = "2021"
  source_root = "src/fuchsia_ui_composition_flatland_test.rs"
  sources = [ "src/fuchsia_ui_composition_flatland_test.rs" ]
  deps = [
    "//sdk/fidl/fuchsia.ui.composition:fuchsia.ui.composition_rust",
    "//sdk/fidl/fuchsia.ui.test.context:fuchsia.ui.test.context_rust",
    "//src/lib/fidl/rust/fidl",
    "//src/lib/fuchsia",
    "//src/lib/fuchsia-component",
    "//third_party/rust_crates:anyhow",
    "//third_party/rust_crates:futures",
  ]
}

ctf_fuchsia_component("fuchsia_ui_composition_flatland_test_component") {
  testonly = true
  component_name = "fuchsia_ui_composition_flatland_test"
  manifest = "meta/fuchsia_ui_composition_flatland_test.cml"
  deps = [ ":fuchsia_ui_composition_flatland_test_bin" ]
}

ctf_fuchsia_component("fuchsia_ui_composition_test") {
  testonly = true
  manifest = "meta/fuchsia_ui_composition_test.cml"
}

ctf_fuchsia_test_package("fuchsia_ui_composition_flatland_test_package") {
  enable_ctf_test_realms = true
  package_name = "fuchsia_ui_composition_flatland_test_package"
  test_components = [ ":fuchsia_ui_composition_test" ]
  subpackages = RUST_SUBPACKAGES
  deps = [ ":fuchsia_ui_composition_flatland_test_component" ]
}

group("tests") {
  testonly = true
  deps = [ ":fuchsia_ui_composition_flatland_test_package" ]
}
