group("fidl") {
  testonly = true
  deps = [
    ":tests",
    "calculator:all",
    "cpp:all",
    "hlcpp:all",
    "rust:all",
  ]

  if (current_cpu != "riscv64") {
    deps += [
      # TODO(fxbug.dev/129033): Move above once Dart toolchain support RISC-V.
      "dart:all",

      # The Go toolchain does not support RISC-V.
      "go:all",
    ]
  }
}

group("tests") {
  testonly = true
  deps = [
    "calculator:tests",
    "cpp:tests",
    "echo-realm:tests",
    "hlcpp:tests",
    "new:tests",
  ]

  if (current_cpu != "riscv64") {
    deps += [
      # TODO(fxbug.dev/129033): Move above once Dart toolchain support RISC-V.
      "dart:tests",

      # The Go toolchain does not support RISC-V.
      "go:tests",
    ]
  }
}
