{
    capabilities: [
        { protocol: "fuchsia.blackout.test.Controller" },
    ],
    use: [
        {
            directory: "dev-topological",
            from: "parent",
            rights: [ "r*" ],
            path: "/dev",
        },
        { protocol: "fuchsia.process.Launcher" },
    ],
    expose: [
        {
            protocol: "fuchsia.blackout.test.Controller",
            from: "self",
        },
    ],
}
