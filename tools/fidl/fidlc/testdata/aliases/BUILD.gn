import("//build/fidl/fidl.gni")

fidl("test.aliases") {
  testonly = true
  sources = [ "example.test.fidl" ]
  experimental_flags = [
    "output_index_json",
    "unknown_interactions",
  ]
  public_deps = [ ":test.someotherlibrary" ]
  enable_hlcpp = true
  golden_fuzzer = true
}

fidl("test.someotherlibrary") {
  testonly = true
  sources = [ "someotherlibrary.test.fidl" ]
  experimental_flags = [ "unknown_interactions" ]
  enable_hlcpp = true
  golden_fuzzer = true
}
