library test.overlay;

type Pizza = struct {
    toppings vector<string:16>;
};

type Pasta = struct {
    sauce string:16;
};

type PizzaOrPasta = strict overlay {
    1: pizza Pizza;
    2: pasta Pasta;
};

type Overlay = strict overlay {
    1: Primitive int32;
    2: StringNeedsConstructor string;
    3: VectorStringAlsoNeedsConstructor vector<string>;
