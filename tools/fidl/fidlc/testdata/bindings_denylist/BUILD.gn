import("//build/fidl/fidl.gni")

fidl("test.dependent") {
  testonly = true
  sources = [ "dependent.test.fidl" ]
  experimental_flags = [ "unknown_interactions" ]
  enable_hlcpp = true
  golden_fuzzer = true
}

fidl("test.bindingsdenylist") {
  testonly = true
  sources = [ "example.test.fidl" ]
  public_deps = [ ":test.dependent" ]
  experimental_flags = [
    "output_index_json",
    "unknown_interactions",
  ]
  enable_hlcpp = true
  golden_fuzzer = true
}
